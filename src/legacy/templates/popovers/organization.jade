.organizationpopover
    - var target = isMacGap ? '_blank' : '_self'
    ul.popover-list
        li.hide
            a(href='#')
                i.fa.fa-eye
                =_('Compact View')
        if (isInviter)
            li
                a.invite-new-members
                    i.fa.fa-user-plus
                    =_('Invite new members')
        if (isOrgManager)
            li.break-line
                a(href='/accounts/organization/settings/', target=target)
                    i.fa.fa-cog
                    =_('Organization Settings')
            li
                a(href='/accounts/organization/settings/members/', target=target)
                    i.fa.fa-user
                    =_('Manage Members')
            li
                a(href='/integrations/', target=target)
                    i.fa.fa-link
                    =_('Add Service Integrations')
        li.break-line
            a(href='/accounts/settings/', target=target)
                i.fa.fa-cog
                =_('Account Settings')
        li
            a.edit-view(href='#')
                if (user.settings && user.settings.compact_mode)
                        i.fa.fa-th-list
                        =_('Normal View')
                else
                        i.fa.fa-list
                        =_('Compact View')
        li
            a(href='/accounts/settings/notifications/', target=target)
                i.fa.fa-bell
                =_('Notification Settings')
        li
            a(href='#',onclick='ui.intro.start();window.analytics.track("Started Tutorial", {via: "user menu"});')
                i.fa.fa-life-saver
                =_('Tutorial')
        li
            a(href='/accounts/organization/dashboard/', target='_self')
                i.fa.fa-random
                =_('Switch Organizations')
        li.break-line
            a(href='/accounts/logout/', target='_self')
                i.fa.fa-sign-out
                =_('Sign Out')
