#dialog, .dialog
	background: none
	border: none
	top: 50%
	transform: translateY(-50%)
	pointer-events: none

	// partial fix for blurry centering
	display: flex
	align-items: center
	justify-content: center

.dialog .content
	background: white
	padding: 0px
	border: none
	border-radius: 4px
	box-shadow: 0px 4px 10px -1px rgba(jet, 0.5)
	width: 525px;
	white-space: normal
	pointer-events: auto
	animation-name: show-dialog
	animation-duration: 0.25s
	animation-timing-function: grape-bezier
	.body
		position: relative
		height: 100%
		img
			max-width: 100%

.dialog .top-bar
	position: relative
	width: 100%
	border: none

.dialog .container
	overflow-x: hidden
	overflow-y: auto
	padding: 15px
	border-bottom-left-radius: 4px
	border-bottom-right-radius: 4px
	background: white
	position: relative
	z-index: 3
	&.room-list-container
	&.pm-list-container
		height: 356px
		max-height: 60%
		padding: 0px !important
		padding-left: 16px
		padding-right: 16px
	&.markdown-tips
		height: 480px
		max-height: 70%
	&.org-invite
		.invite-to-org
			textarea
				margin-bottom: 10px
				transition: border-color 0.2s ease-out
				& + .electron-error
					font-size 11px
					padding-left 10px
					color: #e61212
				&:invalid
					border-color: #e61212
		&.invite-to-room
		max-height: 70%
		.btn-invite
			margin-bottom: 0
		.invite-list
			height: 180px
			overflow-y: auto
			margin: 20px 0
			.user
				padding: 4px 8px
				font-size: 14px
				a
					color: #666
					text-decoration: none
				.avatar-wrap
					vertical-align: middle
					margin-right: 10px
					img
						width: 32px
						height: 32px
					.online,
					.offline
						right: 0
						bottom: 0
				&:hover
				&.selected
					background-color: #EBEEF3
					border-radius: 3px
		.form-content
			width: 100%
			height: 82px
			border-radius: 5px
			border: 1px solid #E1E6ED
			.selected-list
				position: absolute
				top: 26px
				left: 26px
				max-width: 476px
				max-height: 69px
				overflow-y: auto
				li
					display: inline-block
					input
					input:focus
						display: inline-block
						width: 15px
						border: none
						outline: none
						background-color: transparent
				.user
					line-height: 1
					cursor: pointer
					padding: 2px 5px
					color: #666
					background-color: #EBEEF3
					border: 1px solid #D3D5DA
					border-radius: 4px
					margin-right: 5px
					margin-bottom: 2px
					display: inline-block
					text-decoration: none
					&:hover
						background-color: #D3D5DA
					.mdi
						vertical-align: middle;
						margin-left: 5px;
.dialog .title
	display: flex
	padding-bottom: 20px
	font-size: 21px
	color: #333
	cursor: default
	background: white
	border-top-left-radius: 4px
	border-top-right-radius: 4px
	border-bottom: 3px solid #ebeef3
	z-index: 4
	position: relative
	line-height: 1
	span
		padding-left: 20px
		padding-top: 20px
		text-align: left
		flex: 2
		font-size: 21px
		transition: opacity 0.2s
		&.hidden
			opacity: 0

#dialog, .dialog, .introjs-tooltip
	.back-button
		cursor: pointer
		position: relative
		top: 15px
		margin-left: 12px
		margin-bottom: 8px
		padding: 5px 10px 4px 9px
		color: white
		font-size: 0.8em
		font-weight: lighter
		z-index: 20
		border-radius: 4px
		opacity: 0.8
		background: rgba(0,0,0,0.3)
		line-height: 1.4
		&:hover
			opacity: 1.0
			color: white
			background: rgba(0,0,0,0.15)
	.close
		cursor: pointer
		position: absolute
		top: 17px
		right: 10px
		padding: 4px 10px 4px 9px
		color: #aaa
		font-size: 2em
		z-index: 20
		background: none
		&:hover
			opacity: 0.8
		&:active
			opacity: 0.2
	h2
		@extend $bigger-font-size
		margin-bottom: 6px
	h3, h4, h5
		color: gainsboro-dark
		@extend $normal-font-size
		font-weight: normal
	h3
		text-transform: uppercase
		margin-bottom: 6px
	h4, h5
		margin-bottom: 6px
	h4
		font-weight: bold
	p
		margin-bottom: 8px
		line-height: 17px
	ul.ver-list
		padding-left: 20px
		list-style-type: disc
	.delete-room-form
		margin-top: 12px
		.delete
			@extend .button-delete
	a.creator-name
		@extend $hoverable
		color: link-color
		text-decoration: none
		border-bottom: 1px solid link-color
		margin: 1px
		padding: 1px 0
	table, td
		vertical-align: top
	table
		margin: 0 0 5px 0
		width: 100%
		display: table
		max-width: 100%
	td
		width: 50%
		> em
			margin-bottom: 5px
	td:first-of-type
		padding-right: 22px
	pre
		padding-bottom: 3px
	code
		width: 100%
	.example-text
		background: #f8f8f8
		border-radius: 3px
		border: 1px solid #dad6e0
		padding: 0 2px
	.new-room
		flex: 1
		right: 52px
		top: 16px
		text-align: center
		position: absolute
		pointer-events: none
		font-size: 13px
		transition: right 0.3s, top 0.3s
		transition-timing-function: grape-bezier
		z-index: 1
		&.hidden
			right: 280px
			pointer-events: none !important
			.dialog-button
				background: sidebar-background !important
				color: sidebar-group-title !important
				font-size: 1.1em !important
				pointer-events: none !important
				&:hover
					background: sidebar-background
					color: sidebar-group-title
					pointer-events: none
	.dialog-button
		position: relative
		color: white
		font-size: 1em
		padding: 4px 16px 4px 14px
		background: #6cb500
		border-radius: 4px
		border: none
		cursor: pointer
		pointer-events: auto
		transition: background 0.3s, color 0.3s, font-size 0.3s
		line-height: 1.7
		&:hover
			background: lighten(#6cb500,10%)
			color: white
	.manager-menu
		width: 100%
		display: flex
		z-index: 2
		position: relative
		transition: height 0.2s, margin-top 0.25s
		background: #ebeef3
		padding: 0 10px
		&.hidden
			margin-top: -47px
		a
			display: inline-block
			text-decoration: none !important
			padding: 8px 0 10px 0px
			margin: 0 10px
			text-align: center
			color: #abb0b9
			font-size: 15px
			border-bottom: solid 2px transparent
			&:first-of-type
				border-left: none
			&.selected
				color: #0080ff
				border-bottom-color: #0080ff
				&:hover
					color: #0080ff
			&:hover
				color: #abb0b9
	.dialog-list
		li
			margin: 0
			padding: 0
			@extend $functional-list
			&.break-line
				border-top: 1px solid silver-dark
			&:last-child a // let's have nice rounded edges at the bottom
				border-bottom-right-radius: main-border-radius
				border-bottom-left-radius: main-border-radius
			&:first-child a // let's have nice rounded edges at the top
				border-top-right-radius: main-border-radius
				border-top-left-radius: main-border-radius
			a
			.func-inner-wrap
				min-width: 224px
				padding-left: 16px
				padding-right: 16px
				.fa
					margin-right: 10px
					@extend $big-font-size
			.avatar-wrap
				img
					margin-top: 2px
				.avatar-status
					bottom: -3px
	.markdown-tips
		.header
			padding-top: 24px
			padding-bottom: 4px
			font-size: 1.1em
			color: sidebar-button-background
			cursor: default
			&:first-of-type
				padding-top: 4px
		.table
			display: flex
			.cell
				flex: 1
				&:first-of-type
					margin-right: 24px
			.cell-title
				color: #999999
				font-size: 0.9em
				font-style: italic
				padding-bottom: 4px
			pre
				white-space: pre-wrap
			img
				width: 100%
			code
				border: 1px solid #E5E5E5
				border-radius: 4px
				background: #FFFFFF
				padding: 0 4px
				display: inline-block
				margin-bottom: -1px
				word-wrap: break-word
				color: #4D4D4D
			em
				font-style: italic
			ul,
			ol
				padding-left: 18px
			ul
				list-style: disc outside none
			ol
				list-style: decimal outside none
			blockquote
				font-style: italic
				color: #888291
				padding: 2px 6px
				border-left: 3px solid #dad6e0
	.room-list
	.pm-list
		padding: 4px 0px 10px 0px
		margin-bottom: 0px
		a
			text-decoration: none
		.main
			padding-left: 10px
			margin: 0px
			overflow: hidden
		.header
			padding-left: 16px
			padding-top: 8px
			padding-bottom: 4px
			font-size: 0.9em
			color: #aaa
			cursor: default
		.room
			@extend $clearfix
			padding-top: 9px
			padding-bottom: 9px
			&:hover
				background: #0080ff
				.room-name
					color: white !important
				.room-info
					color: white !important
				button
					opacity: 1
		.pm
			@extend $clearfix
			padding-top: 3px
			padding-bottom: 3px
			a:hover
				background: none !important
			&:hover
				background: rgba(sidebar-button-background, 0.1)
				.room-name
					color: #404040 !important
				.room-info
					color: darken(gainsboro-dark, 40%) !important
				button
					opacity: 1
		.room-face
			float: left
			display: inline-block
			text-align: center
			width: 42px
			height: 42px
			margin-left: 16px
			line-height: 42px
			border-radius: 21px
			background: grape-dark
			position: relative
			font-size: 1.1em
			color: white
			.room-icon
				position: absolute
				right: -6px
				bottom: -4px
				width: 14px
				height: 14px
				z-index: 12
				padding-left: 1px
				line-height: 14px
				text-align: center
				border-radius: 50%
				background: slate
				font-size: 12px
				color: white
			i
				font-size: 0.6em !important
				padding-left: 0px !important
		.room-name
			padding-top: 2px
			padding-bottom: 2px
			color: #808080
			font-size: 1.2em
		.room-info
			@extend $small-font-size
			margin: 0
			color: gainsboro-dark
			li
				padding: 0
				margin-right: 10px
				display: inline-block
				i
					margin-right: 3px
		button
			margin-top: 4px
			margin-right: 12px
			border-radius: 4px
			padding: 4px 12px 4px 11px
			color: white
			border: 0
			&.join
				padding: 4px 12px 4px 12px
				background: #6CB500
				&:hover
					color: white
					background: lighten(#6CB500, 10%)
			&.leave
				color: white
				background: #D53A37
				&:hover
					color: white
					background: lighten(#D53A37, 10%)
		.pm.deleted
			color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				text-transform: uppercase
				margin-left: 4px
	p
		display: inline-block
		font-size: 1.1em
	.warning
		color: geraldine
		font-size: 1.1em
	i.warning
		display: inline-block;
		font-size: 4em;
		top: 3px;
		position: relative;
		padding-right: 10px;
		color: #BBB;
	form
		pointer-events: auto
		top: 0px
		width: 100%
		opacity: 1
		&.delete-room-form
			margin-top: 0px
		&.hidden
			opacity: 0
			pointer-events: none
		.header
			padding-left: 2px
			padding-top: 12px
			padding-bottom: 4px
			font-size: 13px
			color: #666
			cursor: default
			&:first-of-type
				padding-top: 14px
		input[type="text"]
			width: 100%
			border: solid 1px #E5E5E5
			padding: 11px 14px 11px 14px
			font-size: 1.1em
			color: #808080
			&:focus
				color: #333333
				border-color: #CCCCCC
		.room-type-picker
			display: flex
		input[type="radio"]
			&:checked + label
				border: solid 1px rgba(sidebar-background, 0.5) !important
				background: #FDFDFD
				i
					color: #0080ff
				span
					color: #0080ff
		label
			&:before
				display: none
			&:first-of-type
				margin-right: 16px
			flex: 1
			display: inline-block
			padding: 12px 16px 12px 16px
			text-align: left
			margin: 0
			border: solid 1px #E5E5E5
			border-radius: 4px
			background: #F7F7F7
			i
				display: inline-block
				padding-right: 6px
				font-size: 1.2em
				color: #A5A5A5
			span.radio-label-name
				font-size: 1.2em
				color: #9D9D9D
			span.radio-label-subline
				color: #A5A5A5
				display: block
				font-size: 13px
				line-height: 1.5em
		.create-room-button
			float: right
			padding: 12px 16px 12px 16px
			font-size: 1.1em
			border: none
			margin-top: 12px
			background: grass-light
			&:hover
				background: lighten(grass-light,10%)
			&.hidden
				pointer-events: none
		.delete-room-button
			float: right
			padding: 12px 16px 12px 16px
			border: none
			margin-top: 6px
			font-size: 1.1em
			background: geraldine
			color: rgba(white, 0.9)
			&:hover
				background: lighten(geraldine, 10%)
				color: white

#IModalOverlay, .overlay
	background: rgba(0, 0, 0, 0.4)
	opacity: 1

@keyframes show-dialog {
	from {
		opacity: 0;
		margin-top: 100px;
	}

    to {
    	opacity: 1;
    	margin-top: 0px;
	}
}

@keyframes fade-in {
	from {
		opacity: 0;
	}

	to {
		opacity: 1;
	}
}
