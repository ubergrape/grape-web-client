.introjs-helperNumberLayerelperLayer
	background-color: rgba(255,255,255,.1)
	border-radius: main-border-radius
	border: 1px solid rgba(255,255,255,.7)
.introjs-tooltip
	min-width: 280px
	width: 500px
	max-width: 500px
	padding: 30px 30px 20px !important
	background: #0080ff
	border-radius: 15px
	color: white
	h2
		font-size: 24px
		font-weight: bold
		margin-bottom: 10px
	p
		font-size: 15px
		line-height: 1.5 !important
	a
		color: white
		&:hover
			opacity: 0.7
.introjs-arrow.bottom
	bottom: -30px
.introjs-arrow.left
	left: -30px
.introjs-arrow.top
	top: -30px
.introjs-arrow
	border: 15px solid white
.intro-step-1
	left: -450px !important
	top: -250px !important
	background: #6cb500 !important
	.introjs-arrow.bottom
		right: 15px
		border-top-color: #6cb500 !important
.intro-step-2
	left: 0 !important
	background: #ed8928
	.introjs-arrow.top
		border-bottom-color: #ed8928 !important
.intro-step-3
	left: 0 !important
	background: #642081
	.introjs-arrow.top
		border-bottom-color: #642081 !important
.intro-step-4
	background: #0080ff
	.introjs-arrow.top
		border-bottom-color: #0080ff !important
		right: 50px !important
.intro-step-5
	background: #6cb500 !important
.introjs-progress
	display: none
.intro-welcome
	width: 550px
	max-width: 550px
.introjs-skipbutton
	float: right
	font-weight: 400
	color: white !important
	margin-top: 15px
.introjs-nextbutton,
.intro-step-5 .introjs-skipbutton
	float: none
	color: white !important
	border-radius: 4px !important
	padding: 8px 15px !important
	font-size: 17px !important
	background: rgba(0,0,0,0.5) !important
	&:hover
		background: rgba(0,0,0,0.3) !important
.introjs-tooltipbuttons
	text-align: left !important
.introjs-helperLayer
	border: 0 !important
	box-shadow: none !important
	background: transparent !important
.introjs-helperNumberLayer
	width: 18px
	height: 22px
	background: grape-light
	border: 1px solid rgba(255,255,255,.7)
	border-top-width: 0
	border-left-width: 0
	border-radius: main-border-radius 0 main-border-radius 0
	top: 0
	left: 0
	text-shadow: none
	padding: 0
	font-family: "proxima-nova", Arial, Helvetica, Geneva, sans-serif!important
.introjs-bullets
	ul
		li
			a
				width: 12px
				height: 12px
				color: gainsboro-light
				&.active
					color: grape-light
.introjs-button
	@extend $normal-font-size
	@extend .button
	// Component Overwrites
	font-family: "proxima-nova", Arial, Helvetica, Geneva, sans-serif!important
	text-shadow: none
	color: grape-typo
	background: none
	&:hover
		box-shadow: none
		color: grape-typo
	&.introjs-disabled
		display: none
	&.introjs-nextbutton
		background: none
		color: button-color
		border-radius: 0
		&:hover
			background: silver-light
		&:active
			background: silver-dark
	&.introjs-prevbutton
		display: none
.introjs-center
	margin: 0 auto
	text-align: center
.introjs-image
	width: 100px
	height: auto
.introjs-push-arrow-bottom
	.introjs-arrow
		top: auto !important
		bottom: 20px !important
