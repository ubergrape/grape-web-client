ul.dialog-list.pm-list
	if mode == 'active'
		li.item.header
			=_('All active users in your organization')
	if mode == 'invited'
		li.item.header
			=_('Users who have not accepted their invitation yet')
	if mode == 'deleted'
		li.item.header
			=_('Archived messages with deleted users')
	each user in items
		if mode === 'active' && user.active && !user.is_only_invited
			li.item.pm
				a(href="/chat/@" + user.username.toLowerCase())
					aside.avatar-wrap
						img(src="#{user.avatar}",width="28",alt="#{user.username}")
						.avatar-status(class=(user.status === 16 ? 'online' : 'offline'))
					span.user-name=user.displayName
		if mode === 'invited' && user.is_only_invited && user.active
			li.item.pm
				a(href="/chat/@" + user.username.toLowerCase())
					aside.avatar-wrap
						img(src="#{user.avatar}",width="28",alt="#{user.username}")
						.avatar-status(class=(user.status === 16 ? 'online' : 'offline'))
					span.user-name=user.displayName
		if mode === 'deleted' && !user.active && user.pm && user.pm.latest_message_time
			li.item.pm.deleted
				a(href="/chat/@" + user.username.toLowerCase())
					aside.avatar-wrap
						img(src="#{user.avatar}",width="28",alt="#{user.username}")
						.avatar-status(class=(user.status === 16 ? 'online' : 'offline'))
					span.user-name=user.displayName
					span.user-deleted= _('Deleted user')