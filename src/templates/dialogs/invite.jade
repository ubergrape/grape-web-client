.top-bar.markdown-tips
	.title
		span=_('Invite new members')
.container.invite-to-room
	form.invite-to-room
		textarea.input-invite(name="invite-users", placeholder="Enter names or email addresses ..." style="max-width:72%")
		button.button.btn-invite.btn-icon.btn-primary(type="submit", name="submit")
			i.icon.fa.fa-user-plus
			| Invite members
	ul.invite-list
		each invitee in users
			li.channel-item.free(data-username="#{invitee.username}")
				a
					.item-inner-wrp
						.avatar-wrap
							if invitee.status === 16
								span.online
							else
								span.offline
							img(src="#{invitee.avatar}", alt="#{invitee.username}")
							.avatar-status(class=(invitee.status === 16 ? 'online' : 'offline'))
						span.channel-name
							| #{invitee.displayName}