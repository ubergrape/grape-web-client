.right-sidebar-wrapper
    if (mode == 'members')
        .members
            .right-sidebar-header
                i.mdi.mdi-account-multiple
                span.title= memberCount + _(' Members')
            ul.user-list
            a.button.btn-gainsboro.invite-members
                =_('Invite')
    else if (mode == 'search')
        .search
            .right-sidebar-header
                span.title= _('Search your conversations')
                span.close-search
                    i.fa.fa-times
            ul.search-list
    else if (mode == 'profile')
        .profile
            .right-sidebar-header
                span.title= _('User profile')
            div.user-profile-view
