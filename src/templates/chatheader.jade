.room-header-wrap
	.room-info-wrap
		if room.type === 'room'
			if editOptions.renamingRoom
				form.room-rename
					input.room-name.editable(value=room.name, type="text")
					input.submit-rename(type="submit")
				.rename-options-wrap
					a.header-option.option-rename-cancel(title="Cancel")
						i.fa.fa-times
					a.header-option.option-rename-ok(title="Save")
						i.fa.fa-check
			else
				.room-name(class=editOptions.canManageRoom? 'editable' : '')
					if mode === 'search'
						i.fa.fa-link
						=_(" in ")
					| #{room.name}
					if room.topic
						br
						span.room-topic=room.topic
					if editOptions.canManageRoom
						a.header-option.option-rename-room(title="Rename Room")
							i.fa.fa-pencil()
				.options-wrap
					if editOptions.canManageRoom
						a.header-option.option-delete-room(title="Delete Room")
							i.fa.fa-trash()
		else if room.type === 'pm'
			h1.room-name
				if room.users[0].is_only_invited
					i.fa.fa-envelope
					| <
				| #{room.users[0].displayName}
		
	form.search-form
		input.search(type="search", name="search-input", placeholder=_("Search for messages, files, etc."))
		i.fa.fa-search.search-icon()
		i.fa.fa-times.close()

	each item in menu.items
		if (item.visible)
			div.room-header-button(class= item.className, class= item == menu.selected ? 'selected' : '', id= item.id ? item.id : '')
				a
					i.fa(class= item.icon)

	.user-menu-wrap.hide(id='intro-step5', title="My Settings")
		.avatar-wrap
			span.online
			img(src="#{user.avatar}",width="28",alt="Avatar of #{user.username}")
				.avatar-status(class='online')
		i.fa.fa-chevron-down