.chat-header
	h1.roomname
		if room.type === 'room'
			= room.name
		else if room.type === 'pm'
			| Chat with #{room.users[0].username}
	span.usersonline
		i.fa.fa-user
		em.usertext #{room.users.length} users in this room 
		each user in room.users
			span.user(class=[user.id in room.typing ? 'typing' : ''], key=user.id)
				i.fa.fa-cog.fa-spin
				| #{user.username} (#{user.status}) 
	form.searchform
		input.search(type="search", placeholder=_("search for content, documents, appointments, â€¦"))
		input.search-submit(type="submit")
		i.fa.fa-search.search-icon
	div(style='clear:both;')

