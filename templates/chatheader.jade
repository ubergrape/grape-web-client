.chat-header
	form.search-form
		input.search(type="search", placeholder=_("search for content, documents, appointments, â€¦"))
		input.search-submit(type="submit")
		i.fa.fa-search.search-icon
	.room-info-text
		.room-name
			h1
				if room.type === 'room'
					= room.name
				else if room.type === 'pm'
					| Chat with #{room.users[0].username}
			if room.type !== 'pm'
				.connected-users
					i.fa.fa-user
					span.sml-nr
						| #{room.users.length}
					each user in room.users.slice(0,3)
						span.user(class=[user.id in room.typing ? 'typing' : ''], key=user.id)
							if user.status === 16
								span.online
							else
								span.offline
							if user.avatar === 'null'
								img(src="#{user.avatar}",width="20",alt="#{user.username}")
							else
								img(src="http://cdn3.photos.erdbeerlounge.de/images/avatars/user/a/m/o/amour/AICS/fs/46/46/ffffff/amour.jpg",width="20",alt="#{user.username}")
					if room.users.length > 3
						- var moreusers = room.users.length - 3
						span.more 
							| + #{moreusers} more