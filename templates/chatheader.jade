.chat-header
	.avatar-wrap
		if true
			span.online
		else
			span.offline
		img(src="#{user.avatar}",width="36",alt="Avatar of #{user.username}")
			.avatar-status(class='online')
		i.fa.fa-chevron-down
	form.search-form
		input.search(type="search", placeholder=_("search for content, documents, appointments, ..."))
		input.search-submit(type="submit")
		i.fa.fa-search.search-icon
	.room-info-text
		.room-name
			if room.type !== 'pm'
				.connected-users
					i.fa.fa-user
					span.sml-nr
						| #{room.users.length}
					each user in room.users.slice(0,3)
						span.user(class=[user.id in room.typing ? 'typing' : ''], key=user.id, title=user.username)
							if user.status === 16
								span.online
							else
								span.offline
							img(src="#{user.avatar}",width="20",alt="#{user.username}")
					if room.users.length > 3
						- var moreusers = room.users.length - 3
						span.more
							| + #{moreusers} more
			else
				.pm-partner
					span.user(class=[user.id in room.typing ? 'typing' : ''], key=room.users[0].id, title=room.users[0].username)
						if room.users[0].status === 16
							span.online
						else
							span.offline
						img(src="#{room.users[0].avatar}",width="30",alt="#{room.users[0].username}")
			if room.type === 'room'
				h1.room-name= room.name
			else if room.type === 'pm'
				h1
					| Chat with #{room.users[0].username}
