
h2
	span.nav-title=_('Rooms')
	button.additem.nav-button.button-inset=_('add room')
ul.nav-list
	each room in items
		li.item(class=(room == selected ? 'selected' : ''), data-id=room.id)
			if room.private
				i.icon.fa.fa-lock
			else
				i.icon.fa.fa-comments
			span.name=room.name
			if room.unread > 0
				span.unread=room.unread
