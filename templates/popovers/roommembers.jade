.roommemberspopover
	h3=_('Members in ') + room.name
	span.close Ã—
	div.po-scroll-wrap
		ul.user-list
			each member in room.users
				li.item.user
					if member != user
						a(href='/chat/@' + member.username.toLowerCase())
							aside.avatar-wrap
								img.image(src="#{member.avatar}",width="20",alt="#{member.username}")
								.avatar-status(class=(member.status === 16 || member.id == user.id ? 'online' : 'offline'))
							if (member.firstName || member.lastName)
								span.user-name #{member.firstName} #{member.lastName} 
							else
								span.user-name= member.username
						if canKickMembers && member != room.creator
							span.fa.fa-times.btn-delete(data-id=member.id)
					else
						div
							aside.avatar-wrap
								img.image(src="#{member.avatar}",width="20",alt="#{member.username}")
								.avatar-status(class=(member.status === 16 || member.id == user.id ? 'online' : 'offline'))
							span.user-name= member.displayName
	h4.mar-t20=_('Invite more members')
	a.invite