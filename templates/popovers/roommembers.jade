.roommemberspopover
	h3=_('Members in ') + room.name
	span.close Ã—
	div.po-scroll-wrap
		ul.user-list
			each member in room.users
				if member.active || member.id == user.id
					li.item.user
						- var href = user.id == member.id ? 'javascript:void(0)' : '/chat/@' + member.username.toLowerCase()
						a(href=href, class=(user.id == member.id ? '' : 'member-link'))
							aside.avatar-wrap
								img.image(src="#{member.avatar}",width="20",alt="#{member.username}")
								.avatar-status(class=(member.status === 16 || member.id == user.id ? 'online' : 'offline'))
							span.user-name= member.displayName
	h4.mar-t20=_('Invite more members')
	a.invite