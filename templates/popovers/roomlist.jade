ul.po-scroll-wrap
	li.list-hl
		h4=_("Rooms you haven't joined")
	each room in items
		if !room.joined
			li.item.room(data-id=room.id, key=room.id)
				button.button.toggle.join
					span.info
						=_('join')
					| 
				.icon-wrap
					if room.private
						i.icon.fa.fa-lock
					else
						i.icon.fa.fa-comments
				.main
					.name=room.name
					ul.room-info
						if room.creator
							li.creator
								=_('by ')
								=room.creator.username
						li.users
							i.fa.fa-user
							|  #{room.users.length}
	li.list-hl.mar-t10
		hr.mar-b10
		h4=_("Rooms you have currently joined")
	each room in items
		if room.joined
			li.item.room(data-id=room.id, key=room.id)
				button.button.toggle.leave
					span.info.j-info
						=_('joined')
					span.info.l-info
						=_('leave')
				.icon-wrap
					if room.private
						i.icon.fa.fa-lock
					else
						i.icon.fa.fa-comments
				.main
					.name=room.name
					ul.room-info
						if room.creator
							li.creator
								=_('by ')
								=room.creator.username
						li.users
							i.fa.fa-user
							|  #{room.users.length}

