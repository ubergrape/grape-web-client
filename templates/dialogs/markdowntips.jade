h2=_("ChatGrape Markdown ")
p=_("How to improve your chat messages with some nifty styles")

h3=_("Inline styles")
table.text
	tr
		td
			em=_("Example")
			pre
				code=_("You can write in *italic*, **bold** and in ~~strike trough~~")
		td
			em=_("Result")
			p
				=_("You can write in ")
				em=_("italic") 
				| , 
				strong=_("bold ")
				=_("and in ")
				s=_("strike trough")
hr
h3=_("Lists")
table.text
	tr
		td
			em=_("Example")
			pre
				code
					=_("- unordered list element")
					br
					=_("- another one")
					br
					br
					=_("1. An ordered list")
					br
					=_("1. A second one")
		td
			em=_("Result")
			ul
				li=_("This is an unordered list element")
				li=_("This is another one")
			br
			ol
				li=_("An ordered list")
				li=_("A second one")
hr
h3=_("Links")
table.text
	tr
		td
			em=_("Example")
			pre
				code
					=_("[A link to ChatGrape](https://chatgrape.com)")
		td
			em=_("Result")
			p
				a(href="https://chatgrape.com")=_("A link to ChatGrape")
hr
h3=_("Images")
table.text
	tr
		td
			em=_("Example")
			pre
				code
					=_("![description](static/chatgrape/static/images/logo.svg)")
		td
			em=_("Result")
			p
				img(alt="description", src="https://ug-cdn.com/static/chatgrape/static/images/logo.svg")
hr
h3=_("Code Snippets")
table.text
	tr
		td
			em=_("Example")
			pre
				code
					=_("This is `Inline` Code")
					br
					br
					| ```
					br
					| <p>
					br
					=_("    This is a Code Block")
					br
					| </p>
					br
					| ```
		td
			em=_("Result")
			p
				=_("This is ")
				code(style="display:inline")=_("Inline")
				=_(" Code")
				br
				br
				pre
					code(style='white-space: pre-wrap; white-space: -moz-pre-wrap;white-space: -o-pre-wrap; word-wrap: break-word;')
						| <p>
						br
						=_("    This is a Code Block")
						br
						| </p>
hr
h3=_("Blockquote")
table.text
	tr
		td
			em=_("Example")
			pre
				code
					=_("> One of the coolest products I've used in a while")
		td
			em=_("Result")
			p
				blockquote
					=_("> One of the coolest products I've used in a while")
