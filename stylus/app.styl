/*______ GENERAL ______*/

html, body
	margin: 0
	padding: 0
	height: 100vh
	overflow: hidden
	text-rendering: optimizelegibility
	@extend $proximaNova
	font-size: main-font-size
	line-height: main-line-height
	color: grape-typo
	background: silver-light
*, *:before, *:after
	box-sizing: border-box

a
	@extend $hoverable
	color: grape-light
	text-decoration: underline
	&:hover
		color: lighten(grape-light, 25)
		text-decoration: underline

::-webkit-scrollbar
	width: 6px

::-webkit-scrollbar-track
	background-color: silver-dark
	border-radius: 3px

::-webkit-scrollbar-thumb
	border-radius: 3px
	background-color: gainsboro-light

::-webkit-scrollbar-thumb:hover
	background-color: gainsboro-dark


/*______ HIDE CLASS ______*/
.hide
	display: none !important

/*______ FRAMEWORK ______*/

.client
	position: relative
	height: 100vh
	overflow: hidden
	margin: 0
	padding: 0
	&::before
		content: ""
		position: absolute
		left: 0
		top: 0
		right: 0
		bottom: 0
		opacity: 0
		z-index: 99999
		background: lighten(silver-light, 30%) url("../../chatgrape/static/images/mascot_loader.gif") 50% 50% no-repeat
		display: none

/*______ LOADING ______*/

.client-loading
	.preloader
		display: block

.preloader
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	z-index: 99999
	height: 100%
	width: 100%
	overflow: hidden
	display: none
	text-align: center
	.history &
		background: silver-light
		div
			position: absolute
			top: 50%
			left: 50%
			height: 70px
			width: 50%
			margin: -35px 0 0 -25%
		h3
			@extend $biggest-font-size
			font-weight: bold
		p
			margin-top: 8px
			color: gainsboro-dark

/*______ FEEDBACK BUTTON ______*/

body .gsfn-bottom
	left: 6px !important
	margin-left: 0 !important
	font-family: inherit !important

/*______ Some common things who need to be distributed properly ______*/

