/*______ GENERAL ______*/

html, body
	margin: 0
	padding: 0
	height: 100%
	overflow: hidden
	text-rendering: optimizelegibility
	font-family: "Roboto", Arial, Helvetica, Geneva, sans-serif
	font-size: main-font-size
	line-height: main-line-height
	color: grape-typo
	background: silver-light
*
	box-sizing: border-box
a
	@extend $hoverable
	color: grape-light
	text-decoration: underline
	&:hover
		color: lighten(grape-light, 25)
		text-decoration: underline
::-webkit-scrollbar
	width: 6px
::-webkit-scrollbar-track
	background-color: silver-dark
	border-radius: 3px
::-webkit-scrollbar-thumb
	border-radius: 3px
	background-color: gainsboro-light
::-webkit-scrollbar-thumb:hover
	background-color: gainsboro-dark

img
	max-width: 100%

/*______ FRAMEWORK ______*/

.client
	position: relative
	background: silver-light
	height: 100%
	overflow: hidden

/*______ FEEDBACK BUTTON ______*/

body .gsfn-bottom
	left: 6px !important
	margin-left: 0 !important
	font-family: inherit !important

/*______ Some common things who need to be distributed properly ______*/

// used in the popover dialogs
hr
	margin: 4px 0
	height: 1px
	border: none
	background: gainsboro-light


/* _____ COMPONENT FIXES ________ */
.scrollbars-override
	overflow-x: hidden !important;