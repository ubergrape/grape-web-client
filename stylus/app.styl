/*______ GENERAL ______*/

html, body
	margin: 0
	padding: 0
	height: 100%
	overflow: hidden
	text-rendering: optimizelegibility
	font-family: "Roboto", Arial, Helvetica, Geneva, sans-serif
	font-size: 15px
	color: grape-typo
*
	box-sizing: border-box

h1, h2, h3, h4, h5, h6
	margin: 0
	padding: 0
a
	@extend $hoverable

/*______ FRAMEWORK ______*/

.client
	position: relative
	background: jet
	height: 100%
	overflow: hidden

/* _____ COMPONENT FIXES ________ */
.scrollbars-override
	overflow-x: hidden !important;