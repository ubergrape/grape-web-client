/* _____ MACGAP Adaptions ________ */
@keyframes slidein {
	0%, 80% {
		opacity: 0;
		transform: scale(0.8);
	}
	100% {
		opacity: 1;
		transform: scale(1);
	}
}

body.macgap
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif !important
	background: white url("../../chatgrape/static/images/preloader-onwhite.gif") 50% 50% no-repeat
	padding: 0
