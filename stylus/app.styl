/*______ GENERAL ______*/

html, body
	margin: 0
	padding: 0
	height: 100%
	overflow: hidden
	text-rendering: optimizelegibility
	font-family: "Roboto", Arial, Helvetica, Geneva, sans-serif
	font-size: main-font-size
	line-height: main-line-height
	color: grape-typo
	background: silver-light
*
	box-sizing: border-box
a
	@extend $hoverable
	color: grape-light
	text-decoration: underline
	&:hover
		color: lighten(grape-light, 25)
		text-decoration: underline
::-webkit-scrollbar
	width: 6px
::-webkit-scrollbar-track
	background-color: silver-dark
	border-radius: 3px
::-webkit-scrollbar-thumb
	border-radius: 3px
	background-color: gainsboro-light
::-webkit-scrollbar-thumb:hover
	background-color: gainsboro-dark

img
	max-width: 100%

/*______ HIDE CLASS ______*/
.hide
	display: none !important

/*______ FRAMEWORK ______*/

.client
	position: relative
	background: silver-light
	height: 100%
	overflow: hidden

/*______ LOADING ______*/

.client-loading
	.preloader
		display: block

.preloader
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	z-index: 99999
	height: 100%
	width: 100%
	overflow: hidden
	display: none
	text-align: center
	.history &
		background: silver-light
		div
			position: absolute
			top: 50%
			left: 50%
			height: 70px
			width: 50%
			margin: -35px 0 0 -25%
		h3
			@extend $biggest-font-size
		p
			margin-top: 8px
			@extend $big-font-size
			color: gainsboro-dark
	.navigation .navigation &
		background: jet
		div
			position: absolute
			top: 50%
			left: 0
			height: 70px
			width: 100%
			margin: -35px 0 0 0
		h3
			@extend $bigger-font-size


/*______ FEEDBACK BUTTON ______*/

body .gsfn-bottom
	left: 6px !important
	margin-left: 0 !important
	font-family: inherit !important

/*______ Some common things who need to be distributed properly ______*/

// used in the popover dialogs
hr
	margin: 4px 0
	height: 1px
	border: none
	background: gainsboro-light


/* _____ COMPONENT FIXES ________ */
.scrollbars-override
	overflow-x: hidden !important

/* _____ DISCONNECTED CHAT ________ */

.disconnected
	.alerts
		position: fixed
		top: 0
		left: 0
		z-index: 9999
		right: 0
	.client
		&::before
			content: ""
			position: absolute
			left: 0
			top: 0
			right: 0
			bottom: 0
			opacity: .8
			z-index: 999
			background-color: lighten(alert-warning-color, 90%)
			background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.5) 35px, rgba(255,255,255,.5) 70px);