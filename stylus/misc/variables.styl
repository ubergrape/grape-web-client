/*______ MAIN MEASUREMENTS ______*/
basic-font-size = 13.5px
basic-line-height = 20px

horizontal-space = basic-font-size
vertical-space = basic-font-size

global-border-radius = 4px

client-navigation-width = 239px
client-header-height = 75px
client-footer-height = 85px
client-header-padding = (vertical-space * 2)


/*______ TYPOGRAPHY ______*/
small-font-size = basic-font-size * .75
big-font-size = basic-font-size * 1.25
bigger-font-size = big-font-size * 1.25
biggest-font-size = bigger-font-size * 1.25



/*
========================================
================ COLORS ================
========================================
*/

/*______ MAIN COLORS ______*/
client-logo-background = #202124
organisation-background = #22252a
room-info-background = #e2e4e6
navigation-background = #292d32
chat-background = #f7f7f7
client-input-background = #f1f1f1
client-border-color = #dcdcdc

highlight-color = #7b477b
highlight-text-color = white

/* sidebar */
sidebar-background = #212022
sidebar-color = #888291

/*______ FORM COLORS ______*/
border-color = #d4d4d4
placeholder-color = #c4c5c7

/*______ CHATLINE ______*/
chatline-content-background = #fff
chatline-time-color = #9c9c9c

/*______ USER-COLOR ______*/
numcolors = 20;
colors = ();

for i in (0...numcolors) {
	color = hsl(i * 11 * (360 / numcolors), 70%, 60%);
	push(colors, color);
}

/*______ FRAMEWORK-COLOR ______*/
