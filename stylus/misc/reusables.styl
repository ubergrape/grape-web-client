@keyframes slidein {
	0% {
		opacity: 0.4;
		transform: translateY(-30px);
	}
	100% {
		opacity: 1;
		transform: translateY(0px);
	}
}
@keyframes overlayFlowIn {
	0% {
		opacity: 0
		background: rgba(aqua-dark, 0.75)
	}
	0% {
		opacity: 0.5
		background: rgba(grape-dark, 0.75)
	}
	100% {
		opacity: 1
		background:  rgba(0, 0, 0, 0.75)
	}
}



@keyframes hifromthebottom {
	0% {
		box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
		transform: scaleX(.96) translate3d(0, 20px, 0);
		opacity: 0
