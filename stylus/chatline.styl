
@import defines

arrow = 6px;
user_width = 100px;

.chatline {
	position: relative;
	padding: 5px
	line-height: 1.4;
	&:not(:last-child).read {
		padding-bottom: 4px;
		border-bottom: 1px solid red;
		&::before {
			display: block;
			content: "new messages";
			position: absolute;
			right: 0px;
			bottom: -5px;
			font-size: 10px;
			line-height: 10px;
			text-transform: uppercase;
			color: red;
			background: chat_bg;
			padding: 0px 5px;
		}
	}
	.user {
		font-family: "Open Sans";
		font-weight: bold;
		left: 0px;
		width: user_width - 5px;
		overflow: hidden;
		text-overflow: ellipsis;
	}
	.time {
		right: 5px;
	}
	.user, .time {
		padding: 5px;
		position: absolute;
	}
	.text {
		margin-left: user_width;
		padding: 5px;
		padding-right: 60px;
		background: white;
		border-radius: 3px;
		min-height: 1.4em;
		&::before {
			content: "";
			display: block;
			height: 0px;
			width: 0px;
			left: user_width;
			top: arrow * 2 + 1px;
			position: absolute;
			border: arrow solid rgba(255, 255, 255, 0);
			border-left-width: 0px;
			border-right-color: white;
		}
	}
}

.readers {
	position: relative;
	height: 5px;
	margin-top: -5px;
	margin-left: user_width;
	padding: 0px 5px;
	padding-top: 3px;
	cursor: pointer;
	font-size: 10px;
	span {
		display: none;
	}
	.reader {
		height: 0px;
		width: 15px;
		margin-right: 5px;
		border-top: 2px solid;
		display: inline-block;
		vertical-align: top;
		overflow: hidden;
		for color, i in colors {
			&.colors-{i} {
				border-color: color;
			}
		}
	}
	&:hover {
		background: white;
		border-radius: 3px;
		height: 12px;
		margin-bottom: -4px;
		padding-top: 0px;
		line-height: 10px;
		span {
			display: inline;
		}
		.reader {
			overflow: visible;
			height: 1em;
			border: none;
			margin: 0;
		}
	}
}
