.activity
	border-radius: main-border-radius 0 0 main-border-radius
	border-left: main-border-radius solid gainsboro-light
	padding: 10px
	background: silver-light
	ul.activity-options
		margin-top: 7px
		@extend $clearfix
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		@extend $horizontal-list
		li
			a
				color: grape-light
				@extend $subtle-link
			i
				margin-right: 4px
		.option
			margin-right: 22px
	.actor
		margin-right: 3px
	&.github
		.container.repository
			color: gainsboro-dark
			text-decoration: none
			&:hover
				text-decoration: underline
		.pull-request
		.comment
		.page
		.issue
			padding: 8px 0px
			color: gainsboro-dark
			&:before
				font-style: normal
				display: inline
				margin-left: 3px
				font-family: FontAwesome
				color: gainsboro-light
				content: "\f09b"
			.content
				padding: 0 4px
				font-style: italic
				position: relative
				height: 6.39em /* exactly five lines */
				&:after
					content: ""
					text-align: right
					position: absolute
					bottom: 0
					right: 0
					width: 70%
					height: 1.2em
					background: linear-gradient(to right, rgba(lighten(silver-dark, 10%), 0.5), rgba(lighten(silver-dark, 10%), 1) 50%)
			a
				padding: 0 4px
				font-weight: bold
				text-decoration: none
				display: inline
		.comment
			border-radius: main-border-radius
			background: lighten(silver-dark, 10%)
			&:before
				content: "\f075"
		.page
			&:before
				content: "\f15b"