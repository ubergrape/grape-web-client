#dialog, .dialog
	background: none
	border: none
	top: 50%
	transform: translateY(-50%)
	pointer-events: none
.dialog .content
	background: white
	padding: 0px
	border: none
	border-radius: 4px
	opacity: 1
	box-shadow: 0px 4px 10px -1px rgba(jet, 0.5)
	transition: opacity 500ms
	width: 600px;
	white-space: normal
	animation: hifromthebottom 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	pointer-events: auto
	.body
		position: relative
		height: 100%
		img
			max-width: 100%

.dialog .top-bar
	position: relative
	width: 100%
	background: sidebar-background
	border: solid 1px darken(sidebar-background, 5%)
	border-bottom: none
	border-top-left-radius: 4px
	border-top-right-radius: 4px

.dialog .container
	overflow-x: hidden
	overflow-y: scroll
	height: 400px
	border: solid 1px rgba(100, 100, 100, 0.5)
	border-top: none
	border-bottom-left-radius: 4px
	border-bottom-right-radius: 4px
	box-shadow: 0px 1px 0px rgba(black, 0.2) inset

.dialog .title
	display: none
	padding-top: 12px
	text-align: center
	font-size: 1.2em
	color: #968296
	cursor: default

#dialog, .dialog, .introjs-tooltip
	.close
		display: none !important
		cursor: pointer
		position: absolute
		top: 12px
		right: 12px
		padding: 4px 10px 4px 9px
		color: white
		font-size: 1.5em
		z-index: 20
		border-radius: 4px
		&:hover
			color: white
			background: rgba(white, 0.1)
	h2
		@extend $bigger-font-size
		margin-bottom: 6px
	h3, h4, h5
		color: gainsboro-dark
		@extend $normal-font-size
		font-weight: normal
	h3
		text-transform: uppercase
		margin-bottom: 6px
	h4, h5
		margin-bottom: 6px
	h4
		font-weight: bold
	p
		margin-bottom: 8px
		line-height: 17px
	ul.ver-list
		padding-left: 20px
		list-style-type: disc
	.delete-room-form
		margin-top: 12px
		.delete
			@extend .button-delete
	a.creator-name
		@extend $hoverable
		color: link-color
		text-decoration: none
		border-bottom: 1px solid link-color
		margin: 1px
		padding: 1px 0
	table, td
		vertical-align: top
	table
		margin: 0 0 5px 0
		width: 100%
		display: table
		max-width: 100%
	td
		width: 50%
		> em
			margin-bottom: 5px
	td:first-of-type
		padding-right: 22px
	pre
		padding-bottom: 3px
	code
		width: 100%
	.example-text
		background: #f8f8f8
		border-radius: 3px
		border: 1px solid #dad6e0
		padding: 0 2px
	.manager-menu
		width: 100%
		margin-top: 12px
		display: flex
		a
			display: inline-block
			text-decoration: none
			padding: 2px 0 9px 0px
			text-align: center
			color: #C3B4C3
			font-size: 1.1em
			flex: 1
			&.selected
				color: white
				border-bottom: solid 4px sidebar-selected
				&:hover
					color: white
			&:hover
				color: rgba(white, 0.8)
		.new-room
			flex: 1
			text-align: center
			position: relative
			pointer-events: none
			.new-room-button
				position: absolute
				right: 8px
				top: -3px
				color: #EDEDED
				font-size: 1em
				margin-left: 6px
				margin-right: 6px
				padding: 4px 16px 4px 14px
				background: sidebar-button-background
				border-radius: 4px
				cursor: pointer
				pointer-events: auto
				&:hover
					background: lighten(sidebar-button-background, 5%)
					color: white
	.room-list
		padding-top: 4px
		padding-bottom: 4px
		a
			text-decoration: none
		.main
			padding-left: 10px
			margin: 0px
			overflow: hidden
		.header
			padding-left: 12px
			padding-top: 6px
			padding-bottom: 4px
			font-size: 0.9em
			color: sidebar-button-background
			cursor: default
		.room
			@extend $clearfix
			padding-top: 9px
			padding-bottom: 9px
			&:hover
				background: rgba(sidebar-button-background, 0.1)
				.room-name
					color: #404040 !important
				.room-info
					color: darken(gainsboro-dark, 40%) !important
		.room-face
			float: left
			display: inline-block
			text-align: center
			width: 42px
			height: 42px
			margin-left: 12px
			line-height: 42px
			border-radius: 4px
			background: grape-dark
			position: relative
			font-size: 1.1em
			color: white
			color: rgba(white, 0.9)
			.room-icon
				position: absolute
				right: -6px
				bottom: -4px
				width: 14px
				height: 14px
				z-index: 12
				padding-left: 1px
				line-height: 14px
				text-align: center
				border-radius: 50%
				background: slate
				font-size: 12px
				color: white
			i
				font-size: 0.6em !important
				padding-left: 0px !important
		.room-name
			padding-top: 2px
			padding-bottom: 2px
			color: #808080
			font-size: 1.2em
		.room-info
			@extend $small-font-size
			margin: 0
			color: gainsboro-dark
			li
				padding: 0
				margin-right: 10px
				display: inline-block
				i
					margin-right: 3px
		.pm.deleted
			color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				text-transform: uppercase
				margin-left: 4px
	form.create-room-form
		&.hidden
			display: none
#IModalOverlay, .overlay
	background: rgba(0, 0, 0, 0.6)
	opacity: 1
	animation: overlayFlowIn 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)
