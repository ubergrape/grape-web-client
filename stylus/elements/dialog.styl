#dialog, .dialog
	background: white
	padding: 15px
	border-radius: main-border-radius
	border: 1px solid gainsboro-light
	opacity: 1
	box-shadow: 0px 4px 10px -1px rgba(jet, 0.5)
	transition: opacity 500ms
	max-width: 450px
	white-space: normal
	.content
		padding: 0
	.close
		cursor: pointer
		position: absolute
		top: 10px
		right: 10px
		color: gainsboro-dark
		font-size: 30px
		line-height: 20px
	h3
		color: gainsboro-dark
		font-size: 14px
		font-weight: normal
		text-transform: uppercase
		margin-bottom: 10px
	p
		margin-bottom: 8px
	.delete-room-form
		margin-top: 12px
		.delete
			@extend .button-delete
