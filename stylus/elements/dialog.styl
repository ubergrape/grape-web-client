#dialog, .dialog
	height: 80%
	background: none
	border: none
	top: 10%
	max-width: 750px
	.content
		background: white
		padding: 15px
		border-radius: main-border-radius
		border: 1px solid gainsboro-light
		opacity: 1
		box-shadow: 0px 4px 10px -1px rgba(jet, 0.5)
		transition: opacity 500ms
		max-width: 100%
		white-space: normal
		position: relative
		height: 100%
		.body
			overflow: auto
			position: relative
			height: 100%
	.close
		cursor: pointer
		position: absolute
		top: 10px
		right: 10px
		color: gainsboro-dark
		font-size: 30px
		line-height: 20px
		z-index: 20
		background: #fff
	h3, h4, h5
		color: gainsboro-dark
		@extend $normal-font-size
		font-weight: normal
	h3
		text-transform: uppercase
		margin-bottom: 10px
	h4, h5
		margin-bottom: 5px
	h4
		font-weight: bold
	p
		margin-bottom: 8px
	.delete-room-form
		margin-top: 12px
		.delete
			@extend .button-delete
	table, td
		vertical-align: top
	table
		margin: 0 0 5px 0
		width: 100%
		display: table
		max-width: 100%
	td
		width: 50%
		> em
			background: grape-dark
			color: #fff
			padding: 0 4px
			border-radius: 4px
			margin-bottom: 5px
	td:first-of-type
		padding-right: 22px
	code
		width: 100%

#IModalOverlay, .overlay
	background: rgba(0, 0, 0, 0.75)