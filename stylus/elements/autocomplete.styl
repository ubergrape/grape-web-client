// ****
//
// classes used in the autocomplete dropdown within the input area
//
// ****

.autocomplete-wrapper
	position: relative
	margin-left: 46px
	margin-right: 30px
	&.Textcomplete-hidden
		display: none
		opacity: 0
		transform: scale(0.8) translateY(-20px)
		bottom: -10px
		opacity: 0
	.autocomplete
		position: relative
		overflow: auto
		overflow-x: hidden
		max-height: 392px
	.Textcomplete-inner
		position: absolute
		bottom: 0px
		width: 100%
		background: white
		padding: 0
		border: 1px solid gainsboro-light
		border-radius: 0
		box-shadow: 0px 3px 4px 0 rgba(grape-typo, .5)
		z-index: 200
		transition: opacity .1s ease-out, bottom .1s ease-out, height .1s ease-out
		.entry-type-description
			display: none
		.option-wrap
			overflow: hidden
			padding: 5px 10px 10px
			height: 30px
			color: grape-typo
			@extend $ellipsis
			&.full_name_true
				em
					display: none
			&.full_name_false
				em
					margin-left: -3px
		.Textcomplete-headline
		.group
			background: silver-dark
			@extend $small-font-size
			padding: 4px 8px
			text-transform: uppercase
			color: gainsboro-dark
			padding-top: 10px
		.Textcomplete-option
			padding: 0
			@extend $clearfix
		.entry-additional-info
			color: gainsboro-light
			font-size: 10px
			margin-left: 7px
		time
			text-transform: uppercase;
			padding: 0 8px;
			@extend $small-font-size
		.entry-type-icon
			color: #B9B7BB
			&:after
				margin-left: 0
		.Textcomplete-highlighted
			background: grape-light
			color: white
			.option-wrap
				color: white
			.full_name_true em,
			.entry-additional-info
				color: lighten(grape-light, 30)
			.entry-type-description
				background: grape-dark
				border-color: darken(grape-dark, 5)
				color: lighten(grape-light, 15)
		&.external
			.autocomplete-filter-menu
				background: #3A4160
			.powered-by-facet
				float: right
				color: #7A7586
				@extend $small-font-size
				.powered-by-link
					padding: 8px 16px 8px 0
	.autocomplete-filter-menu
		border-radius: 0
		margin: 0
		padding: 0
		overflow-x: visible
		white-space: nowrap
		background: room-header-background
		z-index: 4;
		position: relative;
		li
			display: inline-block
			list-style-type: none
			transition: all 0.3s
		a
			@extend .button
			text-decoration: none
			color: rgba(white, .5)
			display: inline-block
			position: relative
			padding: 8px 16px 8px
			@extend $small-font-size
			text-transform: uppercase
			font-weight: bold
			&:hover
				background: lighten(room-header-background, 10%)
			i
				margin-right: 5px
				transition: all 400ms
				margin-left: 0
				opacity: 1
			&.active
				background: grape-light
				color: white
				i
					margin-left: -14px
					opacity: 0
			&.active:after
				top: 100%
				left: 50%
				border: solid transparent
				content: " "
				height: 0
				width: 0
				position: absolute
				pointer-events: none
				border-color: transparent
				border-top-color: grape-light
				border-width: 6px
				margin-left: -6px
	.Textcomplete-message
		padding: 15px 12px
		background: silver-dark
		text-align: center
		border-bottom: 2px solid lighten(grape-typo, 10%)
		em
			font-style: italic
		h3
			color: gainsboro-dark
			font-weight: bold
		&.info, &.info h3
			background-color: lighten(alert-info-color, 70%)
			color: darken(alert-info-color, 30%)
			a
				color: grape-light
		&.loading
			padding: 100px 12px
			background: #fff
			border: none
