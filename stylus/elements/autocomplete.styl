// ****
//
// classes used in the autocomplete dropdown within the input area
//
// ****

.autocomplete-wrapper
	position: relative
	margin-left: 46px
	margin-right: 30px
	.autocomplete
		bottom: 0px
		width: 100%
		background: white
		padding: 0
		border: 1px solid gainsboro-light
		border-radius: 0
		background-clip: border-box
		// overflow: hidden
		box-shadow: 0px 3px 4px 0 rgba(grape-typo, .5)
		max-height: 422px
		z-index: 200
		transition: opacity .1s ease-out, bottom .1s ease-out, height .1s ease-out
		.autocomplete-filter-menu
			border-radius: 0
			margin: 0
			padding: 0
			overflow-x: visible
			white-space: nowrap
			background: room-header-background
			li
				display: inline-block
				list-style-type: none
				transition: all 0.3s
			a
				@extend .button
				text-decoration: none
				color: rgba(white, .5)
				display: inline-block
				position: relative
				padding: 8px 16px 8px
				@extend $small-font-size
				text-transform: uppercase
				font-weight: bold
				&:hover
					background: lighten(room-header-background, 10%)
				&.active
					background: grape-light
					color: white
				&.active:after
					top: 100%
					left: 50%
					border: solid transparent
					content: " "
					height: 0
					width: 0
					position: absolute
					pointer-events: none
					border-color: transparent
					border-top-color: grape-light
					border-width: 6px
					margin-left: -6px
		.entry-type-description
			display: none
		.option-wrap
			overflow: hidden
			padding: 5px 10px 10px
			height: 30px
			color: grape-typo
			&.full_name_true
				em
					color: lighten(gainsboro-dark, 10%)
					@extend $small-font-size
		&.Textcomplete-hidden
			bottom: -10px
			opacity: 0
		.Textcomplete-headline
		.group
			background: silver-dark
			@extend $small-font-size
			padding: 4px 8px
			text-transform: uppercase
			color: gainsboro-dark
			padding-top: 10px
		.Textcomplete-option
			padding: 0
			@extend $clearfix
		.entry-additional-info
			display: none // Let's fix this with grouping
			color: gainsboro-light
			float: right
		time
			text-transform: uppercase;
			padding: 0 8px;
			@extend $small-font-size
		.entry-type-icon
			color: gainsboro-dark
			&:after
				margin-left: 0
		.Textcomplete-highlighted
			background: grape-light
			color: white
			.option-wrap
				color: white
			.full_name_true em,
			.entry-additional-info
				color: lighten(grape-light, 30)
			.entry-type-description
				background: grape-dark
				border-color: darken(grape-dark, 5)
				color: lighten(grape-light, 15)

