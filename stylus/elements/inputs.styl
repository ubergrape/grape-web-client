input[type="search"],
input[type="text"],
textarea,
$textinput
	border-radius: main-border-radius
	background: white
	padding: 8px 10px
	border: 1px solid gainsboro-light
	color: grape-typo
	outline: none
	box-shadow: inset 0 1px 2px rgba(#000, 0.075)

.ac
	white-space: nowrap
	background: #eee
	border: 1px solid #ddd
	-webkit-border-radius: 2px
	border-radius: 2px
	display: inline-block
	font: normal 13px/1.4 Roboto,arial,sans-serif
	margin: 0 1px
	padding: 0 1px
	vertical-align: baseline
	color: #427fed
