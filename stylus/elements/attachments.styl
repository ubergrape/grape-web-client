.attachments.message-group
	@extend $clearfix
	margin-top: 20px !important
	margin-bottom: 24px !important
	.message-inner-wrap
		width: 100%
		display: inline-block
	.message-content
		position: relative
.attachments.message
	@extend $clearfix
	.message-inner-wrap
		padding: 0 16px 0 5px
		display: inline-block
		min-width: 390px
	.message-author
		margin-left: 2px
		cursor: default
		font-size: 0.9em
		color: gainsboro-dark
		&.creator
			color: #788796
			&:hover
				cursor: default
				color: #788796
		&:hover
			cursor: pointer
			color: #7B477B
	a.timelink
		@extend $subtle-link
		position: relative
		margin-right: 12px
		font-size: 0.9em
		.fa-globe
			margin-left: 4px
		.time
			display: inline-block
			.different-timezone
				display: inline-block
				opacity: 0
				top: 0px
				left: 0px
				color: #666666
				.dif-tz
					font-size: 1.05em
		&:hover
			.different-timezone
				text-decoration: none !important
				-webkit-transition: opacity 0.2s, -webkit-transform 0.2s
				transition: opacity 0.2s, transform 0.2s
				transition-timing-function: ease-out
				transform: translateX(6px)
				opacity: 1
	.text.main
		margin-left: 2px
		max-width: 740px
		&.add-margin
			margin-top: 12px
