#drop-anywhere
	background: rgba(0,0,0,.85)
	z-index: 9998
	&:after
		content: " "
		position: absolute
		top: 10px
		left: 10px
		right: 10px
		bottom: 10px
		border: 2px dashed aqua-light
		border-radius: 15px
	.drop-inner-wrap
		position: absolute
		top: 45%
		left: 30px
		right: 30px
		text-align: center
		color: aqua-light
		padding-top: 92px
		.image
			position: absolute
			top: 0
			left: 0
			right: 0
			img
				position: relative
			    animation: glide 600ms linear infinite;
		p.main
			@extend $biggest-font-size
			margin-bottom: 5px
		p.description
			color: gainsboro-light