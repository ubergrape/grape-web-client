// ROOM MEMBER-popup-specific things go here
//
// ****
.roommemberspopover
	.popover-list > li
		&:hover
			background-color:  silver-dark
		a
			min-width: 290px
			float: left
			&:hover
				background-color:  silver-dark
		span.btn-delete
			visibility: hidden
			color: gainsboro-dark
			float: right
			margin: 13px 15px 0 0
			cursor: pointer
		&:hover
			span.btn-delete
				visibility: visible
				display: inline-block
	width: 320px
	.input-invite
		@extend $textinput
		width: 100%
		height: 38px
		overflow: hidden
		margin: 5px 0
		resize: vertical
	.btn-invite
		display: block
		float: right
	.invite-to-room
		@extend $clearfix
		.Textcomplete-hidden
			display: none
		.autocomplete-wrapper
			margin: 0
			top: -42px
			.autocomplete
				position: relative
				max-height: 150px
		button
			float: right
			margin-left: 5px