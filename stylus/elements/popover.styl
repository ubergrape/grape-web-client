// ****
//
// common popup things go here
//
// ****

.popover
	position: absolute
	z-index: 200
	background: white
	padding: 15px
	border-radius: main-border-radius
	border: 1px solid gainsboro-light
	opacity: 1
	box-shadow: 0px 4px 10px -1px rgba(jet, 0.5)
	transition: opacity 500ms
	margin: -10px 0 0 -4px
	max-width: 450px
	ul
		padding: 5px 5px 0 0
		margin: 10px 0 0
		max-height: 230px
		overflow: auto
	li
		@extend $functional-list
		padding: 6px 0
	&::before
		content: ""
		display: block
		position: absolute
		top: 10px
		left: - arrow-size
		border-right: arrow-size solid #aaa
		border-top: arrow-size solid rgba(#aaa, 0)
		border-bottom: arrow-size solid rgba(#aaa, 0)
	&::after
		content: ""
		display: block
		position: absolute
		top: 10px + 2
		left: - arrow-size + 2
		border-right: arrow-size - 2 solid white
		border-top: arrow-size - 2 solid transparent
		border-bottom: arrow-size - 2 solid transparent
	&.hide
		opacity: 0
		transition: opacity 500ms
	.close
		cursor: pointer
		position: absolute
		top: 10px
		right: 10px
		color: gainsboro-dark
		font-size: 30px
		line-height: 20px
	h3
		color: gainsboro-dark
		font-size: 14px
		font-weight: normal
		text-transform: uppercase

// ****
