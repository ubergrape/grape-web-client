.popover
	position: absolute
	z-index: 200
	background: white
	padding: 15px
	border-radius: 5px
	border: 1px solid #aaa
	opacity: 1
	box-shadow: 0px 4px 10px -1px rgba(black, 0.5)
	transition: opacity 500ms
	margin-top: -10px
	margin-left: 10px
	&::before
		content: ""
		display: block
		position: absolute
		top: 10px
		left: - arrow-size
		border-right: arrow-size solid #aaa
		border-top: arrow-size solid rgba(#aaa, 0)
		border-bottom: arrow-size solid rgba(#aaa, 0)
	&::after
		content: ""
		display: block
		position: absolute
		top: 10px + 2
		left: - arrow-size + 2
		border-right: arrow-size - 2 solid white
		border-top: arrow-size - 2 solid transparent
		border-bottom: arrow-size - 2 solid transparent

	&.hide
		opacity: 0
		transition: opacity 500ms

	.close
		cursor: pointer
		position: absolute
		top: 10px
		right: 10px
		color: sidebar-text-color
		font-size: 30px
		line-height: 20px

	h3
		color: sidebar-text-color
		font-size: 14px
		font-weight: normal
		text-transform: uppercase

.roompopover
	ul
		padding: 5px 0px
		border-bottom: 1px solid #ddd
		margin: 10px 0px
	li
		margin: 5px 0px
	.icon
		color: sidebar-text-color
		width: 20px
	.name, .users
		display: inline-block
		width: 100px
		text-overflow: ellipsis
		overflow: hidden
		vertical-align: middle
	.toggle
		width: 100px
		padding: 5px
		background: white
		border: 2px solid
		border-radius: 4px
		&.join
			color: grass-light
			border-color: grass-light
		&.leave
			color: bittersweet-light
			border-color: bittersweet-light

.roompopover button.new
	float: right

// TODO: move this to be a mixin?
.button
	background: grape-light
	border: 1px solid grape-light
	border-radius: 3px
	box-shadow: 0px 3px grape-dark
	color: white
	padding: 5px 10px
	.icon
		color: white
		width: 20px
		text-align: right

.roompopover.openform
	.button.new
		display: none
	.newroom
		display: block

.newroom
	display: none
	input[type="text"]
		width: 200px
	label.text, h4
		display: inline-block
		width: 120px
		margin: 10px 0px
	label.radio
		display: inline-block
		width: 100px
	input[type="radio"]
		width: 20px
		margin: 0px 5px
		vertical-align: middle
	.button.create
		float: right

.toggle
	.join
		color: #ff6600
