.nav-button
.new
.toggle
	outline: none
.button // used in popovers
	border-radius: main-border-radius-small
	color: link-color
	padding: 4px 14px
	outline: none
	text-decoration: none !important
	break-word: keep-all
	text-transform: uppercase
	border: none
	.icon
		color: white
		width: 20px
		text-align: right
	&:hover
		background: silver-light
	&:active
		background: silver-dark
	&:disabled
		color: gainsboro-light !important

.button-delete
	@extend .button
	background: bittersweet-light
	border: 1px solid bittersweet-light
	box-shadow: 0px 3px bittersweet-dark
	&:hover
		background: lighten(bittersweet-light, 5%)
	&:active
		background: lighten(bittersweet-light, 10%)
		box-shadow: 0px 2px bittersweet-dark
.button-small
	@extend .button
	@extend $small-font-size
	padding: 3px 7px
.button-inset // used in left navigation
	@extend .button-small
	box-shadow: none
	font-weight: bold
	border: none
	background: grape-light
	margin-top: -3px
	border-radius: main-border-radius-small
	color: white
	&:hover, a:hover &
		background: lighten(grape-light, 20%)
	&:active
		background: darken(grape-light, 20%)
.btn-icon
	padding-left: 7px
	padding-right: 7px
	.icon
		text-align: center

