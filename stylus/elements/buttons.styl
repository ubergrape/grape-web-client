.nav-button
.new
.toggle
	outline: none
.button // used in popovers
	background: grape-light
	border: 1px solid grape-light
	border-radius: 3px
	box-shadow: 0px 3px grape-dark
	color: white !important
	padding: 4px 14px
	outline: none
	text-decoration: none
	.icon
		color: white
		width: 20px
		text-align: right
	&:hover
		background: lighten(grape-light, 5%)
	&:active
		background: lighten(grape-light, 10%)
		margin-bottom: -1px
		margin-top: 1px
		box-shadow: 0px 2px grape-dark
.button-small
	@extend .button
	@extend $small-font-size
	padding: 3px 7px
.button-inset // used in left navigation
	@extend .button-small
	font-weight: bold
	border: none
	background: darken(jet, 25%)
	margin-top: -3px
	border-radius: main-border-radius-small
	box-shadow: 0px 1px 0px lighten(jet, 15%), 0px 1px 0px darken(jet, 35%) inset
	color: gainsboro-dark
	&:hover, a:hover &
		color: gainsboro-light
		background: jet
	&:active
		margin-top: -3px
		margin-bottom: 0
		color: gainsboro-light
		background: jet
		box-shadow: 0px 1px 0px lighten(jet, 15%), 0px 1px 0px darken(jet, 35%) inset
.toggle
	@extend $normal-font-size
	width: 100px
	padding: 4px
	background: white
	border: 2px solid
	border-radius: 4px
	margin-top: -6px
	&.join
		color: grass-light
		border-color: grass-light
		&:hover
			background: lighten(grass-light, 96%)
		&:active
			background: lighten(grass-light, 98%)
			padding: 5px 4px 3px
	&.leave
		color: bittersweet-light
		border-color: bittersweet-light
		&:hover
			background: lighten(bittersweet-light, 96%)
		&:active
			background: lighten(bittersweet-light, 98%)
			padding: 5px 4px 3px