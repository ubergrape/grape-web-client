.button
.btn
	border: none
	display: inline-block
	text-align: center
	font-weight: bold
	border-radius: 4px
	overflow: hidden
	word-break: break-word
	padding: 4px 10px
	outline: none

	.icon,i
		width: 20px
		text-align: right
		margin-left: -4px
	&:hover
		background: rgba(silver-dark, .7)
		text-decoration: none
	&:active
		background: silver-dark
	&:disabled
		color: gainsboro-light !important
	@media $media-max-phone
		margin-top: 8px
		display: block
		width: 100%
		float: none !important
		white-space: pre-wrap
		height: auto !important

.btn-gainsboro // RAISED BUTTON STYLE
	color: darken(gainsboro-dark, 50%) !important
	background: gainsboro-light
	&:hover, &:active
		color: darken(gainsboro-dark, 60%)
		background: lighten(gainsboro-light, 40%)
	&.disabled
		background: lighten(gainsboro-dark, 20%)
		border-bottom: 2px solid gainsboro-dark

.btn-primary
	color: darken(grass-dark, 50%) !important
	background: grass-light
	&:hover, &:active
		color: darken(grass-dark, 60%)
		background: lighten(grass-light, 40%)
	&.disabled
		background: lighten(grass-dark, 20%)
		border-bottom: 2px solid grass-dark

.btn-primary
	color: darken(grass-dark, 50%) !important
	background: grass-light
	&:hover, &:active
		color: darken(grass-dark, 60%)
		background: lighten(grass-light, 40%)
	&.disabled
		background: lighten(grass-dark, 20%)
		border-bottom: 2px solid grass-dark

.btn-tomato
	color: white !important
	background: bittersweet-light
	&:hover, &:active
		color: white
		background: lighten(bittersweet-light, 8%)
	&.disabled
		background: white
		border-bottom: 2px solid bittersweet-dark

.button-delete
	color: bittersweet-dark

.button-small
	@extend .button
	@extend $small-font-size
	padding: 3px 7px

.button-inset // used in left navigation
	@extend .button-small
	box-shadow: none
	border: none
	background: grape-light
	margin-top: -3px
	color: white
	word-break: normal
	&:hover, a:hover &
		background: darken(grape-light, 20%)
	&:active
		background: darken(grape-light, 20%)

.btn-icon
	padding-left: 7px
	padding-right: 7px
	.icon
		text-align: center

.waves-effect
	position: relative
	cursor: pointer
	display: inline-block
	overflow: hidden
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	-webkit-tap-highlight-color: transparent
	transition(all 0.3s ease-out)
	.waves-ripple
		position: absolute
		border-radius: 50%
		width: 100px
		height: 100px
		opacity: 0
		background-color: rgba(0, 0, 0, 0.2)
		transition(all 0.5s ease-out)
		transform(scale(0))
	&.waves-light .waves-ripple
		background-color: rgba(255, 255, 255, 0.4)

.waves-notransition
	-webkit-transition: none !important
	-moz-transition: none !important
	-o-transition: none !important
	transition: none !important

.waves-button,
.waves-circle
	-webkit-transform: translateZ(0)
	-webkit-image-mask: -webkit-radial-gradient(circle, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0))

.waves-button,
.waves-button:hover,
.waves-button:visited,
.waves-button:link,
.waves-button-input
	white-space: nowrap
	vertical-align: middle
	cursor: pointer
	border: none
	outline: none
	background: transparent
	color: inherit
	font-size: 14px
	text-align: center
	text-decoration: none
	z-index: 1

.waves-button
	padding: 10px 15px
	border-radius: main-border-radius

.waves-button-input
	margin: 0
	padding: 10px 15px

.waves-input-wrapper
	border-radius: main-border-radius
	vertical-align: bottom
	&.waves-button
		padding: 0
	.waves-button-input
		position: absolute
		top: 0
		left: 0
		z-index: 1

.waves-circle
	text-align: center
	width: 2.5em
	height: 2.5em
	line-height: 2.5em
	border-radius: 50%

.waves-float
	-webkit-mask-image: none
	box-shadow: 0px 1px 1.5px 1px rgba(0, 0, 0, 0.12)
	&:active
		box-shadow: 0px 8px 20px 1px rgba(0, 0, 0, 0.3)

.waves-block
	display: block

/* Firefox Bug: link not triggered */
a.waves-effect .waves-ripple
	z-index: -1*1

