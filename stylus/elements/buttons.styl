.nav-button
.new
.toggle
	outline: none
.button // used in popovers
	background: grape-light
	border: 1px solid grape-light
	border-radius: 3px
	box-shadow: 0px 3px grape-dark
	color: white
	padding: 5px 10px
	.icon
		color: white
		width: 20px
		text-align: right
.button-inset // used in left navigation
	font-size: sidebar-button-font-size
	font-weight: bold
	border: none
	background: darken(sidebar-background, 25%)
	padding: 3px 7px
	margin-top: -2px
	border-radius: main-border-radius-small
	box-shadow: 0px 1px 0px lighten(sidebar-background, 15%), 0px 1px 0px darken(sidebar-background, 35%) inset
	&:hover
		color: sidebar-button-hover-text-color
		background: sidebar-background
	&:active
		color: sidebar-button-hover-text-color
		background: sidebar-background