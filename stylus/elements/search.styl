/*______ SEARCH FORM ______*/
.search-form
	position: relative
	transition: width .2s ease-out
	width: 192px
	@media (max-width: 800px)
		width: 128px
	.search
		height: 28px
		width: 100%
		padding: 4px 15px 4px 27px
		box-sizing: border-box
		background: none
		border: none
		border: 1px solid grape-light
		border-radius: 3px
		color: white
		outline: none
		placeholder(color = grape-light)
	.search-icon,
	.close
		position: absolute
		top: 0
		color: grape-light
		width: 20px
		line-height: 28px
		font-size: 14px
		text-align: center
	.search-icon
		left: 4px
	.close
		right: 4px
		@extend $hoverable
		display: none
		&:hover
			color: white
	.search-submit
		display: none

/*______ SEARCH RESULT ______*/
.search-results
	@extend $overlay
	padding-left: 0
	padding-right: 0
	.searching &
		display: block
	.result-info, .result-filters
		@extend $clearfix
		padding-left: 30px
		padding-right: 30px
	.result-nr
		overflow: hidden
	.result-filters
		margin: 5px 0 0 0
		padding-bottom: 10px
		border-bottom: 1px solid silver-dark
		h2
			font-weight: bold
			float: left
			margin-right: 12px
		ul
			@extend $horizontal-list
			overflow: hidden
			a
				@extend $subtle-link
		.filter-room
			float: right
		.filter-list
			overflow: hidden
			li
				margin-right: 10px
				i.fa
					margin-right:6px

/*______ RESULT LIST ______*/
.result-list
	margin-top: 18px
	border-top: 1px solid silver-dark
	> li
		position: relative
		border-bottom: 1px dashed silver-dark
		.message-link
			display: block
		.item-object
			@extend $clearfix
			margin: 0 -3px
			&.minor,
			&.minor i,
			&.minor time,
			&.minor span
				color: gainsboro-light
			&.minor
				.item-content
					text-overflow: ellipsis
					overflow: hidden
		.item-type
			float: left
			width: 120px
			padding-left: 27px
			padding: 11px 10px 11px 27px
			text-transform: uppercase
			text-align: right
			font-size: 0.8em
			color: gainsboro-dark
			font-weight: bold
			@extend $ellipsis
		.item-content
			padding: 11px 20px 11px 10px
			overflow: hidden
			border-left: 1px solid silver-dark
			background: white
			color: grape-typo
			.item-text
				@extend $big-font-size
			span
				margin-right: 8px
			strong
				background: search-hightlight-color
				font-weight: normal
			p
				display: inline
			em
				background: gold
				padding: 0px 3px
				margin: 0 -3px
				border-radius: 4px
		&.objects:hover
			.item-content
				color: link-color
		.item-footer
			margin-top: 7px
			@extend $clearfix
			text-transform: uppercase
			@extend $small-font-size
			font-weight: bold
			@extend $horizontal-list
			li
				color: gainsboro-dark
				i
					margin-right: 4px
				a
					color: grape-light
					@extend $subtle-link
			.option
				margin-right: 22px
		&.selected // for arrow navigation
			border-left-color: grape-light
			background: white
			&::before
				content: \u25B6
				position: absolute
				left: -16px
				top: 50%
				margin-top: -3px
				border-left: 8px solid jet
				border-top: 6px solid transparent
				border-bottom: 6px solid transparent
		.direct-link
			position: absolute
			left: 0
			right: 0
			top: 0
			bottom: 0
		a
			text-decoration: none
			&:hover
				text-decoration: none


/*______ STYLES IF SEARCH TRIGGERED ______*/
body .searching
	.client-body
		padding-bottom: 0
	.footer
		transform: translateY(100%)
		transition: transform ease 400ms
	.room-header
		.room-info-wrap
			display: none
		.search-form
			width: 100% !important
		.close
			display: block
