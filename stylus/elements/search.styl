/*______ SEARCH FORM ______*/
.search-form
	position: relative
	transition: width .2s ease-out
	width: 255px
	@media (max-width: 1280px)
		width: 200px
	@media (max-width: 800px)
		width: 128px
	.search
		height: 28px
		width: 100%
		padding: 4px 16px 4px 32px
		box-sizing: border-box
		background: white
		outline: none
		font-size: 1em
		border-radius: 16px
		min-height: 32px
		placeholder(color = rgba(100, 100, 100, 1.0))
		transition: opacity 0.2s
		&:focus
			opacity: 1
			border-color: #642081
	.search-icon,
	.close
		position: absolute
		top: 0
		width: 20px
		line-height: 32px
		font-size: 14px
		text-align: center
	.search-icon
		top: -1px
		left: 8px
		opacity: 0.6
	.close
		right: 8px !important
		opacity: 0.6
		transition: opacity 0.25s
		&:hover
			opacity: 1

	.close
		right: 4px
		@extend $hoverable
		display: none
		&:hover
			color: white
	.search-submit
		display: none

/*______ SEARCH RESULT ______*/
.search-results
	@extend $overlay
	padding-left: 0
	padding-right: 0
	margin-top: header-height
	.searching &
		display: block
	.result-info, .result-filters
		@extend $clearfix
		padding-left: 30px
		padding-right: 30px
	.result-nr
		overflow: hidden
	.result-filters
		margin: 5px 0 0 0
		padding-bottom: 10px
		border-bottom: 1px solid silver-dark
		h2
			font-weight: bold
			float: left
			margin-right: 12px
		ul
			@extend $horizontal-list
			overflow: hidden
			a
				@extend $subtle-link
		.filter-room
			float: right
		.filter-list
			overflow: hidden
			li
				margin-right: 10px
				i.fa
					margin-right:6px
