/*______ SEARCH FORM ______*/
.search-form
	width: 434px
	float: right
	position: relative
	.search
		height: 38px
		width: 100%
		padding: 8px 12px 8px 40px
		outline: none
		box-sizing: border-box
	.search-icon,
	.close
		position: absolute
		top: 0
		color: gainsboro-dark
		width: 40px
		line-height: 37px
		text-align: center
	.search-icon
		left: 0
	.close
		right: 0
		@extend $hoverable
		display: none
		&:hover
			color: bittersweet-light
	.search-submit
		display: none

/*______ SEARCH RESULT ______*/
.search-results
	@extend $overlay
	margin-bottom: footer-height
	padding-left: 0
	padding-right: 0
	.searching &
		display: block
	.result-info, .result-filters
		@extend $clearfix
		padding-left: 30px
		padding-right: 30px
	.result-nr
		overflow: hidden
	.result-filters
		margin: 5px 0 0 0
		padding-bottom: 10px 
		border-bottom: 1px solid silver-dark
		h2
			font-weight: bold
			float: left
			margin-right: 12px
		ul
			@extend $horizontal-list
			overflow: hidden
			a
				@extend $subtle-link
		.filter-room
			float: right
		.filter-list
			overflow: hidden
			li
				margin-right: 10px
				i.fa
					margin-right:6px

/*______ RESULT LIST ______*/
.result-list
	> li
		position: relative
		padding: 22px 10px 22px 27px
		border-left: 3px solid silver-dark
		border-bottom: 2px dashed silver-dark
		.item-object
			@extend $clearfix
			padding: 8px 3px
			margin: 0 -3px
			&.minor, 
			&.minor i, 
			&.minor time, 
			&.minor span
				color: gainsboro-light
			&.minor
				.item-content
					text-overflow: ellipsis 
					overflow: hidden
		.item-info
			float: left
			width: 150px
			h2
				font-weight: bold
				margin-bottom: 2px
			i, span
				color: gainsboro-dark
				@extend $small-font-size
			i
				margin-right: 5px
		.item-content
			overflow: hidden
			b
				background: gold
				padding: 0px 3px
				margin: 0 -3px
				border-radius: 4px
		.item-footer
			margin-top: 7px
			@extend $clearfix
			text-transform: uppercase
			@extend $small-font-size
			font-weight: bold
			@extend $horizontal-list
			li
				a
					color: grape-light
					@extend $subtle-link
			.time
				color: gainsboro-dark
			.option
				margin-right: 22px
		&.selected // for arrow navigation
			border-left-color: grape-light
			background: white
			&::before
				content: \u25B6
				position: absolute
				left: -16px
				top: 50%
				margin-top: -3px
				border-left: 8px solid jet
				border-top: 6px solid transparent
				border-bottom: 6px solid transparent

/*______ STYLES IF SEARCH TRIGGERED ______*/
body .searching .header
	.room-info-text, 
	.user-menu-wrap
		width: 0
		margin: 0
		overflow: hidden
	.search-form
		width: 100% !important
	.search
		padding-right: 40px
	.close
		display: block
