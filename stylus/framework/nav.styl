
.button-inset
	font-size: 8px
	font-weight: bold
	border: none
	background: darken(sidebar-background, 25%)
	padding: 3px 7px
	margin-top: 1px
	border-radius: 5px
	box-shadow: 0px 1px 0px lighten(sidebar-background, 15%), 0px 1px 0px darken(sidebar-background, 35%) inset

.navigation
	color: sidebar-color
	background: sidebar-background
	font-size: 13px
	padding: 43px 15px 0px 31px

.navigation .itemlist
	margin-bottom: 17px

.nav-button
	float: right

.nav-title
	text-transform: uppercase
	font-size: 10px
	font-weight: bold;

.nav-list .item
	padding: 5px 0px
	&.selected
		.icon
			color: highlight-color
		.name
			color: highlight-text-color
.nav-list
	margin-top: 6px
	.icon, .name, .unread, .avatar
		cursor: pointer
	.icon, .avatar
		display: inline-block
		width: 15px
		margin-right: 5px
		text-align: center
	.unread
		display: inline-block
		margin-left: 7px
		font-size: 10px
		font-weight: bold
		line-height: 15px
		min-width: 15px
		padding: 0px 3px
		border-radius: 20px
		text-align: center
		background: highlight-color
		color: highlight-text-color

