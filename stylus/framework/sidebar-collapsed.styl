// ****
//
// Collapsed navigation
//
// ****
.nav-collapsed
	width: 86px
	height: 100vh
	position: absolute
	left: 0px
	top: 0px
	background: sidebar-background !important
	z-index: 100
	display: none
	transition: width 0.2s
	transition-timing-function: grape-bezier

.auto-expand
	&:hover
		width: 240px !important
		max-width: 100% !important
		.channel-name
			opacity: 1.0 !important
			padding-left: 4px !important
			transition-delay: 0.2s !important
		.fl-notification
			margin-top: 12px !important
			padding: 4px 6px 4px 6px !important


// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-area-bg-collapsed
	height: 64px
	display: block
	text-align: center
	border-right: 1px solid darken(sidebar-background, 10%)
	border-bottom: 1px solid lighten(sidebar-background, 25%)
	background-image: url("../images/cg-header.jpg")
	background-position: center center
	background-repeat: no-repeat
	background-size: cover
	.bg-overlay
		position: absolute
		left: 0px
		top: 0px
		display: block
		width: 100%
		height: 64px
		z-index: 30
		background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
					linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.0))

.org-info-collapsed
	width: 100%
	height: 64px
	display: table
	position: absolute
	top: 0px
	left: 0px
	.org-topbar
		width: 100%
		position: absolute
		left: 0px
		top: 0px
		z-index: 120
		padding: 10px
		.settings-icon-collapsed
			text-align: center
			font-size: 20px
			color: rgba(255, 255, 255, 0.6)
			text-shadow: 0px 0px 5px rgba(0, 0, 0, 1)
			-webkit-transition: color 0.3s
			transition: color 0.3s
			cursor: pointer
			&:hover
				color: rgba(255, 255, 255, 1)
		.toggle-sidebar-icon
			position: absolute
			left: 11px
			top: 33px
			text-align: center
			font-size: 18px
			color: rgba(255, 255, 255, 0.6)
			text-shadow: 0px 0px 5px rgba(0, 0, 0, 1)
			transform: rotate(90deg)
			-webkit-transition: color 0.3s
			transition: color 0.3s
			cursor: pointer
			&:hover
				color: rgba(255, 255, 255, 1)
	.org-logo-name
		width: 100%
		height: 100%
		display: table-cell
		position: relative
		vertical-align: middle
		text-align: center
		padding: 0px 16px 0px 36px
		overflow: hidden
		text-decoration: none
		z-index: 110
		img
			display: block
			position: relative
			margin-left: auto
			margin-right: auto
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)
			border-radius: 50%
		i
			margin-left: 8px
			@extend $small-font-size

.manage-rooms-button-collapsed
	position: relative;
	width: 80%;
	display: block;
	text-align: center;
	background: #6E4B6E;
	margin: 0 auto;
	font-size: 1em;
	color: #EDEDED;
	padding-top: 6px;
	padding-bottom: 5px;
	border-radius: 3px;
	left: -1px;
	margin-bottom: 20px;
	text-decoration: none
	&:hover
		background: lighten(#6E4B6E, 5%)
		color: white;
		text-decoration: none


// ****
//
// The room list of the organisation
//
// ****

.nav-tabs
	background: chat-background
	border-bottom: 1px solid silver-dark
	border-right: 1px solid silver-dark
	width: 100%
	@extend $clearfix
	> div
		float: left
		width: 44%
		a
			display: block
			width: 100%
			height: 42px
			text-align: center
			line-height: 45px
			color: gainsboro-dark
			text-decoration: none
			&:hover
				background: navigation-background
				color: darken(gainsboro-dark, 10)
	.nav-tab-search
		width: 12%
		a
			color: gainsboro-dark
			border-left: 1px dashed silver-dark
	.selected
		a
			border-bottom: 3px solid cherry
			color: cherry !important
			&:hover
				background: inherit
.room-list
	padding: 14px 0 0 0
	.rooms
		height: 100%


.nav-title-wrap-collapsed,
a.nav-title-wrap-collapsed
	@extend $clearfix
	display: block
	color: sidebar-group-title
	padding-bottom: 2px
	text-decoration: none
	.nav-title
		color: sidebar-group-title
		text-transform: uppercase
		text-align: center
		font-size: 0.8em
		overflow: hidden
	&:hover
		color: sidebar-group-title
		text-decoration: none
	&.manage-rooms
		cursor: default
	&.addpm
		cursor: pointer
		transition: color 1s
		&:hover
			color: sidebar-group-title-highlight !important
			.nav-title
				color: sidebar-group-title-highlight !important


a.nav-title-wrap-collapsed
	display: inline-block
	float: left
	width: 100%

.nav-button
	position: absolute
	right: 0
	margin: 7px 10px 0 0
	border: 1px solid
	border-radius: 50%
	width: 17px
	height: 17px
	text-align: center
	line-height: 15px
	cursor: pointer
	&:hover
		color: grape-typo

// Sidebar Link Styling

.nav-wrap-out-collapsed
	height: 100%
	position: relative
	.channel-item
		clear: both
		padding: 0px
		padding-right: 8px
		height: 48px !important
		a
			display: block
			width: 100%
			height: 100%
			text-decoration: none
		.item-inner-wrp
			padding: 14px 0
			white-space: nowrap
			position: relative
		.avatar-wrap
		.room-face
			float: left
			display: inline-block
			text-align: center
			width: 32px
			height: 32px
			margin-left: 24px
			margin-right: 8px
			margin-top: -6px
			line-height: 33px
			border-radius: 3px
			background: grape-dark
			position: relative
			font-size: 1.1em
			color: white
			color: rgba(white, 0.9)
		.avatar-wrap
			background: rgba(0, 0, 0, 0) !important
			img
				width: 32px !important
				height: 32px
			.offline, .online
				border: solid 1px sidebar-background
				width: 8px
				height: 8px
				bottom: 0px
				right: 0px
		.icon
			padding: 3px 0
		.room-icon
			position: absolute
			right: -6px
			bottom: -4px
			width: 14px
			height: 14px
			z-index: 12
			padding-left: 1px
			line-height: 14px
			text-align: center
			border-radius: 50%
			background: slate
			font-size: 8px
			color: white
		.channel-name
			white-space: nowrap
			overflow: hidden
			ellipsis()
			font-size: 1.1em
			border: none !important
			left: 0px
			right: 0px
			padding-left: 16px
			padding-right: 6px
			color: white
			z-index: 150
			opacity: 0
			transition: opacity 0.2s, padding-left 0.2s
			transition-timing-function: grape-bezier
		.fl-notification,
		.fl-mention
			position: absolute
			display: inline-block
			float: right
			top: 0px
			right: 0px
			margin-right: 12px
			margin-top: 6px
			font-size: 0.75em
			padding: 2px 6px 2px 6px
			z-index: 140
			transition: margin-top 0.1s, height 0.1s, padding 0.1s
			transition-timing-function: grape-bezier
		&:hover
			background: sidebar-hover
			.offline, .online
				border-color: sidebar-hover
		&.deleted
			.name
				color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				text-transform: uppercase
				margin-left: 4px
		&.selected
			background: sidebar-selected !important
			color: white !important
			.offline, .online
				border-color: #a0284b
	.nav-list
		padding: 0 0 12px 0

	// ****
	//
	// The Private Message list
	//
	// ****
	.pm-list
		margin-bottom: 40px
		.pms
			height: 100%

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	background: navigation-background
	border: none
	border: 1px solid darken(navigation-background, 5)
	border-radius: 25px
	width: client-navigation-width
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = gainsboro-dark)
	&:focus
		outline: none
		color: grape-typo

