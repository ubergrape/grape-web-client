/*______ GENERAL ______*/


html, body {
	margin: 0;
	padding: 0;
	height: 100%
	overflow: hidden
	font-size: main-font-size
	//line-height: main-line-height
}

* 
	box-sizing border-box


/*______ CLIENT STYLING ______*/

.client
	position: relative
	background: sidebar-background
	height: 100%
	overflow: hidden
	.header
	.footer
		position: fixed
		left: 0
		right: 0
	.header
		top: 0
		height: header-height
	.footer
		bottom: 0
		height: footer-height


/*______ Header Info about the Room you are in ______*/
.client-room-info
	background: room-header-background
	overflow: hidden
	height: header-height
	border-bottom: 1px solid client-border-color
	padding: 17px 30px
	h1
		margin: 0
		float: left
		font-weight: bold
		font-size: bigger-font-size
		padding-top: 8px
	.usersonline
		float: left
		margin-left: 20px
		padding-top: 14px
		color: gainsboro-dark
		.usertext
			margin-left: 5px
	.searchform
		float: right
		width: 434px
		.search
			height: 22px
			width: 380px
			border: 1px solid gainsboro-light
			border-radius: main-border-radius
			padding: 8px 12px 8px 40px
			outline: none
			color: gainsboro-dark
		.search-icon
			position: relative
			left: 15px
			top: -27px
			color: gainsboro-dark
		.search-submit
			display: none
	.user:not(.typing) .fa
		display: none
	



/*______ Mid-Section with Navigation and Chatline ______*/
.client-body
	height: 100%
	padding-bottom: footer-height
	padding-top: header-height
	.navigation
		width: client-navigation-width
		height: 100%
		overflow: auto
		float: left
	.chat
		background: chat-background
		overflow: auto
		height: 100%
		padding: 10px 0px