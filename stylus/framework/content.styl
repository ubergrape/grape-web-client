/*
========================================
============== FRAMEWORK ===============
========================================
*/

html, body {
	margin: 0;
	padding: 0;
	height: 100%
	overflow: hidden
}

box-sizing()
  vendor('box-sizing', arguments)
 
// apply a natural box layout model to all elements
* 
	box-sizing border-box



.client
	position: relative
	background: navigation-background
	height: 100%
	overflow: hidden
	> header, > footer
		position: fixed
		left: 0
		right: 0
	> header
		top: 0
		height: client-header-height
	> footer 
		bottom: 0
		height: client-footer-height

.client-info
	float: left
	width: client-navigation-width
	height: client-header-height
	background: organisation-background
	.logo
		background: client-logo-background
		height: (client-header-height / 3)

.client-room-info
	background: room-info-background
	overflow: hidden
	height: client-header-height
	border-bottom: 3px solid client-border-color
	h1
		margin: 0
		float: left
		width: 150px
	.search
		float: right
		height: 22px
		width: 180px

.client-body
	height: 100%
	padding-bottom: client-footer-height
	padding-top: client-header-height
	.overview
		width: client-navigation-width
		height: 100%
		overflow: auto
		float: left
	.chat
		background: chat-background
		overflow: auto
		height: 100%

.client-input
	border-top: 3px solid client-border-color
	margin-left: client-navigation-width
	background: client-input-background
	padding: (vertical-space / 2) (horizontal-space / 2)
	.input-wrapper
		.input
			width: 100%
			min-height: client-footer-height - vertical-space - 3px

