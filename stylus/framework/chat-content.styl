/*______ Mid-Section with Navigation and Chatline ______*/
.client-body
	height: 100%
	padding-top: header-height
	.navigation
		width: client-navigation-width
		height: 100%
		overflow: auto
		float: left
	.chat-wrapper
		position: relative
		background: chat-background
		overflow: auto
		height: 100%
		padding: 0 0 footer-height 0
		.chat
			height: 100%
			position: relative
			padding-top: 14px
		.message-group
			@extend $clearfix
			margin: 10px 30px 14px 20px
			position: relative
			.avatar
				float: left
				position: relative
				font-weight: bold
				.image
					width: 36px
					float: left
					margin-right: (horizontal-space / 2)
					border-radius: 50%
				&::after
					content: ""
					position: absolute
					right: 0
					top: 14px
					border-right: main-border-radius solid white
					border-top: main-border-radius solid transparent
					border-bottom: main-border-radius solid transparent
			.message-content
				padding: 10px 10px
				overflow: hidden
				background: white
				border-radius: main-border-radius
				.time
					font-size: small-font-size
					text-transform: uppercase
					float: right
					color: gainsboro-dark
				> .time
					opacity: 1
				.author
					font-weight: bold
					margin-bottom: 3px
					color: gainsboro-dark
					display: block
					@extend $subtle-link
					em
						color: lighten(gainsboro-dark, 10)
						@extend $small-font-size
				.message
					margin-bottom: 3px
					.time, .edit
						opacity: 0
						transition: opacity 200ms ease
					&:hover
						> .time
						> .edit
							opacity: 1
					.edit
						@extend $hoverable
						display: inline-block
						vertical-align: top
						color: gainsboro-light
						.btn-edit
							margin-left: 6px
							&:hover
								color: gainsboro-dark
							&:active
								color: darken(gainsboro-dark, 25%)
						.btn-delete
							margin-left: 4px
							&:hover
								color: bittersweet-dark
							&:active
								color: darken(bittersweet-dark, 25%)
					&.removing
						background: lighten(gold, 80%)
						padding: 2px 6px 0
						margin: -2px -6px 0
						border-radius: main-border-radius
					&.removed
						background: lighten(bittersweet-light, 60%)
						padding: 2px 6px 0
						margin: -2px -6px 0
						border-radius: main-border-radius
					.text
						display: inline-block
						padding: 0
						margin-bottom: 3px	
						a 
							color: grape-light
							text-decoration: none
							&:hover
								color: lighten(grape-light, 25%)
								text-decoration: underline
						.warning-unsent
							color: gainsboro-light
							&:before
								content: "\f071"
								font-family: FontAwesome
								color: gold
								margin-right: 6px
					.img-atm
						display: inline-block
