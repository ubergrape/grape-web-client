/*______ Mid-Section with Navigation and Chatline ______*/
.client-body
	height: 100%
	padding-top: header-height
	.navigation
		width: client-navigation-width
		height: 100%
		overflow: auto
		float: left
	.chat-wrapper
		position: relative
		background: chat-background
		overflow: auto
		height: 100%
		padding: 0 0 footer-height 0
	.chat
		height: 100%
		position: relative
		padding-top: 14px
	a 
		color: link-color
		@extend $subtle-link
		&:hover
			color: lighten(link-color, 15%)
.message-group
	@extend $clearfix
	margin: 20px 30px 20px 20px
	position: relative
	.avatar
		float: left
		position: relative
		font-weight: bold
		.image
			width: 36px
			float: left
			margin-right: (horizontal-space / 2)
			border-radius: 50%
		&::after
			content: ""
			position: absolute
			right: 0
			top: 14px
			border-right: main-border-radius solid white
			border-top: main-border-radius solid transparent
			border-bottom: main-border-radius solid transparent

.author
	font-weight: bold
	margin-bottom: 3px
	color: darken(gainsboro-dark, 20%)
	display: inline-block
	@extend $subtle-link
	em
		color: lighten(gainsboro-dark, 10%)
		@extend $small-font-size

.welcome-message
	padding: 10px 10px 22px 56px
	border-bottom: 2px dashed silver-dark
	h2, h3, p, ul
		max-width: 720px
		margin-bottom: 2px
	h2
		@extend $bigger-font-size
		color: gainsboro-dark
		margin-bottom: 4px
	h3
		@extend $big-font-size
		font-weight: bold
		color: darken(gainsboro-dark, 20%)
		margin-bottom: 3px
	.welcome-tasks
		margin-top: 7px
		@extend $clearfix
		.task-description
			font-weight: bold
			color: gainsboro-dark
			margin-bottom: 2px
		li
			i
				margin-right: 4px
		.option
			margin: 0 22px 10px 0
			padding-top: 5px
		.invite-to-room
			@extend $clearfix
			.input-invite
				width: 70%
				height: 38px
				padding: 9px 12px 8px 12px
				outline: none
				box-sizing: border-box
				float: left
				margin-right: 8px
			.btn-invite
				max-width: 200px
				text-overflow: ellipsis
				height: 34px
		.autocomplete-wrapper
			margin: 0
			top: 4px	
			width: 70%
			.autocomplete
				@extend $clearfix
				top: 0px
				
.message-content
	padding: 8px 10px 5px
	overflow: hidden
	background: white
	border-radius: main-border-radius
	.time
		font-size: small-font-size
		text-transform: uppercase
		float: right
		color: gainsboro-dark
	> .time
		opacity: 1
	.message
		margin-bottom: 3px
		overflow: hidden
		.time, 
		.edit, 
		.btn-label
			opacity: 0
			transition: opacity 200ms ease
		&:hover
			> .time
			> .edit
			> .btn-label
				opacity: 1
		.edit, 
		.btn-label
			@extend $hoverable
			display: inline-block
			vertical-align: top
			color: gainsboro-light
			i
				margin-left: 6px
				margin-left: 4px
				&:hover
					color: gainsboro-dark
				&:active
					color: darken(gainsboro-dark, 25%)
			.btn-delete
				&:hover
					color: bittersweet-dark
				&:active
					color: darken(bittersweet-dark, 25%)
		&.editing
			background: lighten(gold, 80%)
		&.removing
			background: lighten(gold, 80%)
			padding: 2px 6px 0
			margin: -2px -6px 0
			border-radius: main-border-radius
		&.removed
			background: lighten(bittersweet-light, 60%)
			padding: 2px 6px 0
			margin: -2px -6px 0
			border-radius: main-border-radius
		.text
			display: inline-block
			padding: 0
			margin-bottom: 3px
			max-width: 90%
			word-wrap: break-word
			em
				font-style: italic
			.warning-unsent
				color: gainsboro-light
				&:before
					content: "\f071"
					font-family: FontAwesome
					color: gold
					margin-right: 6px
		.img-atm
			display: inline-block

// SEPERATORS
.date-separator, 
.newmessage-separator
	text-align: center
	text-transform: uppercase
	color: gainsboro-dark
	@extend $small-font-size

.date-separator
	margin: 0 30px 0 20px
	padding:  5px 0 0 0

.newmessage-separator
	border-bottom: 1px solid aqua-dark
	height: 7px
	margin: 0px 30px 18px 20px
	span
		color: aqua-dark
		background: chat-background
		padding: 0px 5px
