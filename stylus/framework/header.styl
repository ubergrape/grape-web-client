// ****
//
// Header Info about the Room you are in
//
// ****
.room-header
	display: flex
	align-items: center
	height: header-height
	z-index: 30
	background: room-header-background
	-webkit-font-smoothing: antialiased // fixes font bug in os x app and firefox on windows, see #1612
	-moz-osx-font-smoothing: grayscale // fixes font bug in os x app and firefox on windows, see #1612

	.room-header-wrap
		width: 100%
		display: flex
		justify-content: flex-end
		align-items: center
		padding: 0 10px 0 20px

		.room-info-wrap
			flex: 1
			display: flex
			align-items: center

			input.room-name
				background: transparent
				border: none
				outline: none
				padding: 0
				border-bottom: 1px solid lighten(grape-light, 20%)
			input.submit-rename
				display: none;
			.room-name
				@extend $bigger-font-size
				margin: 0
				color: white
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				max-width: 220px
				border-bottom: 1px solid room-header-background
				@media (max-width: 1024px)
					max-width: 200px
				@media (max-width: 768px)
					max-width: 180px
				&.editable:hover
					border-color: grape-light
					&+.options-wrap .option-rename-room
						color: white
			.options-wrap
			.rename-options-wrap
				@extend $hoverable
				@extend $clearfix
				display: inline-block
				margin-left: 5px
				@media (max-width: 800px)
					display: none
			.header-option
				display: inline-block
				color: grape-light
				padding: 0 6px
				font-size: 14px
				&:hover
					color: white
			.room-users-wrap
				@extend $hoverable
				margin-left: 20px
				&:hover
					.user-count
						color: white
						.fa
							color: white
				span.user-count
					font-weight: bold
					color: grape-light
					.fa.fa-user
						font-size: 14px
					.fa.fa-caret-down
						margin-left: 5px
						color: grape-light
		.user-menu-wrap
			@extend $hoverable
			margin-left: 10px
			display: flex
			align-items: center
			@media (max-width: 600px)
					display: none
			&:hover
				.fa
					color: white
			.fa
				margin-left: 5px
				color: grape-light
			.avatar-wrap
				margin: 0
				img
					float: none
					vertical-align: bottom
			.online
			.offline
				width: 10px
				height: 10px