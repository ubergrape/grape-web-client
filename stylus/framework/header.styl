// ****
//
// Header Info about the Room you are in
//
// ****
.room-header
	display: flex
	align-items: center
	height: header-height
	z-index: 30
	background: #F8F8F8
	-webkit-font-smoothing: antialiased // fixes font bug in os x app and firefox on windows, see #1612
	-moz-osx-font-smoothing: grayscale // fixes font bug in os x app and firefox on windows, see #1612
	border-bottom: 1px solid #F7F7F7
	.room-header-color-shade
		display: inline-block
		position: absolute
		width: 100%
		height: header-height
		background: rgba(100, 50, 100, 0.05)
		border-bottom: solid 1px rgba(100, 50, 100, 0.1)
	.room-header-wrap
		position: relative
		width: 100%
		height: header-height
		display: flex
		justify-content: flex-end
		align-items: center
		padding-right: 0px

		.room-info-wrap
			flex: 1
			display: flex
			align-items: center
			padding-left: 20px
			float:left

			input.room-name
				background: transparent
				color: rgba(100, 50, 100, 1.0)
				border: none
				outline: none
				padding: 0
				border-radius: 0
				border-bottom: 1px solid lighten(grape-light, 20%)
			input.submit-rename
				display: none
			.room-name
				margin: 0
				color: rgba(100, 50, 100, 1.0)
				font-size: 1.6em
				padding-top: 2px
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				border-bottom: none
				float:left
			.room-topic
				font-size: 0.65em
				color: #999999
				float:left
				clear: both
			.options-wrap
			.rename-options-wrap
				@extend $hoverable
				@extend $clearfix
				display: inline-block
				margin-left: 5px
				@media (max-width: 800px)
					display: none
			.header-option
				display: inline-block
				color: white
				padding: 0 6px
				font-size: 14px
				&:hover
					opacity: 0.7
			.room-users-wrap
				@extend $hoverable
				margin-left: 20px
				span.user-count
					color: white
					.fa.fa-user
						font-size: 14px
					.fa.fa-chevron-down
						margin-left: 8px
						@extend $small-font-size
				&:hover
					.user-count
						opacity: 0.7
		.user-menu-wrap
			@extend $hoverable
			margin-left: 10px
			display: flex
			align-items: center
			@media (max-width: 600px)
					display: none
			.fa
				margin-left: 8px
				color: white
				@extend $small-font-size
			&:hover
				.fa
					opacity: 0.7
			.avatar-wrap
				margin: 0
				img
					float: none
					vertical-align: bottom
			.online
			.offline
				width: 10px
				height: 10px
	.room-header-button
		width: 90px
		height: 100%
		padding: 0
		margin: 0
		text-align: center
		line-height: header-height
		font-size: 2em
		color: rgba(175, 175, 175, 1.0)
		display: inline-block
		cursor: pointer
		overflow:hidden
	.room-header-button-active
		width: 90px
		height: 100%
		padding: 0
		margin: 0
		text-align: center
		line-height: header-height
		font-size: 2em
		color: #FFFFFF
		background-color: rgba(230, 230, 230, 0.25)
		display: inline-block
		cursor: pointer
		overflow:hidden
