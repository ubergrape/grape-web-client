// ****
//
// Header Info about the Room you are in
//
// ****
.room-header
	display: flex
	align-items: center
	height: header-height
	z-index: 30
	background: #3C2745
	-webkit-font-smoothing: antialiased // fixes font bug in os x app and firefox on windows, see #1612
	-moz-osx-font-smoothing: grayscale // fixes font bug in os x app and firefox on windows, see #1612
	position: relative
	.room-header-color-shade
		display: none
	.room-header-wrap
		width: 100%
		display: flex
		justify-content: flex-end
		align-items: center
		padding-right: 15px

		.room-info-wrap
			flex: 1
			display: flex
			align-items: center
			padding-left: 20px
			float:left

			form.room-rename
				z-index: 150
			input.room-name
				background: transparent
				color: rgba(100, 50, 100, 1.0)
				border: none
				outline: none
				padding: 0
				border-radius: 0
				border-bottom: 1px solid lighten(grape-light, 20%)
				z-index: 150
			input.submit-rename
				display: none;
			.room-name
				margin: 0
				color: white !important
				font-weight: bold
				font-size: 1.6em
				padding-top: 2px
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				border-bottom: none
				float:left
				z-index: 2
			.room-topic
				font-size: 0.65em
				color: #999999
				float:left
				clear: both
			.options-wrap
			.rename-options-wrap
				@extend $hoverable
				@extend $clearfix
				display: inline-block
				margin-left: 12px
				@media (max-width: 800px)
					display: none
			.header-option
				display: inline-block
				color: white
				font-size: 14px
				&:hover
					opacity: 0.7
			.room-users-wrap
				@extend $hoverable
				margin-left: 20px
				span.user-count
					color: white
					.fa.fa-user
						font-size: 14px
					.fa.fa-chevron-down
						margin-left: 8px
						@extend $small-font-size
				&:hover
					.user-count
						opacity: 0.7
		.user-menu-wrap
			@extend $hoverable
			margin-left: 10px
			display: flex
			align-items: center
			@media (max-width: 600px)
					display: none
			.fa
				margin-left: 8px
				color: white
				@extend $small-font-size
			&:hover
				.fa
					opacity: 0.7
			.avatar-wrap
				margin: 0
				img
					float: none
					vertical-align: bottom
			.online
			.offline
				width: 10px
				height: 10px
	.option-delete-room
		margin-top: 4px
		padding: 0
	.option-rename-room
		padding: 0 0 0 15px
	.option-rename-cancel
		margin-right: 10px
	.room-header-button
		width: 34px
		height: 34px
		border-radius: 34px
		line-height: 36px
		margin: 0 5px
		text-align: center
		font-size: 2em
		color: white
		display: inline-block
		cursor: pointer
		overflow: hidden
		a
			color: white
	.room-header-button
		background-color: transparent

.right-sidebar-show
	#menuToggle
		background-color: white
		color: #3C2745