/*______ Header Info about the Room you are in ______*/
.header
	position: fixed
	left: 0
	right: 0
	top: 0
	height: header-height
	.room-info
		background: room-header-background
		overflow: hidden
		height: header-height
		border-bottom: 1px solid gainsboro-light
		padding: 17px 30px 17px 20px
		@extend $clearfix
		.room-info-text, .avatar-wrap, .search-form
			max-width: 100%
			overflow: hidden
			// transition: all 200ms linear
		.room-info-text
			overflow: hidden
			position: relative
			.room-name
				position: relative
				display: inline-block
				max-width: 100%
				h1
					@extend $bigger-font-size
					margin: 0
					font-weight: bold
					padding-top: 8px
					margin-right: 20px
					height: 1.5em
					max-width: 500px
					margin-right: 185px
					// Shortening the Room Name
					text-overflow: ellipsis 
					white-space: nowrap
					overflow: hidden
					display: block
				.pm-partner
					float: left
					margin: 4px 7px 0 0
					position: relative
					.user
						@extend .avatar-wrap
						float: left
			.connected-users
				position: absolute
				right: 0px
				top: 9px
				color: gainsboro-dark
				width: 175px
				border-radius: 4px
				padding: 5px 8px 3px 8px
				@extend $hoverable
				&:hover
					opacity: 0.8
				.fa-user, .user, .sml-nr
					float: left
				.user
					margin-left: 8px
					@extend .avatar-wrap
				.more
				.sml-nr
					margin-left: 5px
				.sml-nr
					display: none
		.user:not(.typing) .fa
			display: none
		.user-menu-wrap
			@extend $clearfix
			@extend $hoverable
			float: right
			margin: 0 0 0 20px
			display: table-cell
			vertical-align: middle
			&:hover
				padding: 3px
				margin: -3px -3px -3px 17px
				background: lighten(silver-dark, 25%)
				border-radius: main-border-radius
				.fa
				.user-name
					color: darken(gainsboro-dark, 20%)
			.fa
				margin: 10px 0 0 5px
				color: gainsboro-dark
			.avatar-wrap
				display: inline
				margin-right: 6px
			.online
			.offline
				top: -6px
				width: 10px
				height: 10px
			.user-name
				color: gainsboro-dark
				font-weight: bold