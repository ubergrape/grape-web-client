// ****
//
// Header Info about the Room you are in
//
// ****
.room-header
	display: flex
	align-items: center
	height: header-height
	z-index: 60
	-webkit-font-smoothing: antialiased // fixes font bug in os x app and firefox on windows, see #1612
	-moz-osx-font-smoothing: grayscale // fixes font bug in os x app and firefox on windows, see #1612
	position: relative
	box-shadow: 0 0 1px 0 rgba(0,0,0,0.4)
	.room-header-color-shade
		display: none
	.room-header-wrap
		width: 100%
		display: flex
		justify-content: flex-end
		align-items: center
		padding-right: 15px

		.room-info-wrap
			flex: 1
			display: flex
			align-items: center
			padding-left: 20px
			padding-right: 20px
			float:left

			form.room-rename
				z-index: 150
			input.room-name
				background: transparent
				color: rgba(100, 50, 100, 1.0)
				border: none
				outline: none
				padding: 0
				border-radius: 0
				border-bottom: 1px solid lighten(grape-light, 20%)
				z-index: 150
			input.submit-rename
				display: none;
			.room-name
				margin: 0
				color: #333 !important
				font-weight: bold
				font-size: 1.6em
				padding-top: 2px
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				border-bottom: none
				float:left
				z-index: 2
			.room-name-wrapper
				text-overflow: ellipsis
				overflow: hidden
			.description-edit-form
				width: 400px;
				max-width: 70%;
				margin-right: 10px;
			.description,
			.description-edit
				margin: 0px 0 0 20px
				padding: 5px 10px
				border: 1px solid transparent
				overflow: hidden
				white-space: nowrap
				line-height: 1.2
				text-overflow: ellipsis
				color: rgba(0, 0, 0, 0.5)
				&:hover
					border-color: #ebeef3;
					border-radius: 4px;
				&:focus
					outline: 0
				&.editable
					color: #333
					border-radius: 4px;
					background: #ebeef3;
					width: 100%;
			.options-wrap
			.rename-options-wrap
				@extend $hoverable
				@extend $clearfix
				display: inline-block
				margin-left: 5px
				white-space: nowrap
				@media (max-width: 800px)
					display: none
			.header-option
				display: inline-block
				color: black
				font-size: 14px
				opacity: 0.4
				&:hover
					opacity: 1
			.room-users-wrap
				@extend $hoverable
				margin-left: 20px
				span.user-count
					color: white
					.fa.fa-user
						font-size: 14px
					.fa.fa-chevron-down
						margin-left: 8px
						@extend $small-font-size
				&:hover
					.user-count
						opacity: 0.7
		.user-menu-wrap
			@extend $hoverable
			margin-left: 10px
			display: flex
			align-items: center
			@media (max-width: 600px)
					display: none
			.fa
				margin-left: 8px
				color: white
				@extend $small-font-size
			&:hover
				.fa
					opacity: 0.7
			.avatar-wrap
				margin: 0
				img
					float: none
					vertical-align: bottom
			.online
			.offline
				width: 10px
				height: 10px
	.option-delete-room
		margin-top: 4px
		padding: 0
	.option-rename-room
		padding: 0 10px 0 10px
	.option-rename-cancel
		margin-right: 10px
	.room-header-button
		width: 32px
		height: 32px
		border-radius: 16px
		line-height: 34px
		margin-left: 10px
		text-align: center
		font-size: 20px
		color: white
		display: inline-block
		cursor: pointer
		overflow: hidden
		background-color: transparent
		a
			color: #642081
		&.selected
			background-color: #642081
			a
				color: white


