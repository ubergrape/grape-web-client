// ****
//
// Header Info about the Room you are in
//
// ****
.room-header
	position: fixed
	left: client-navigation-width
	right: 0
	top: 0
	height: header-height
	z-index: 30
	background: room-header-background
	overflow: hidden
	height: header-height
	padding: 11px 30px 11px 20px
	box-shadow: 0px 3px 2px 0px rgba(grape-dark, 0.4);
	@extend $clearfix
	.room-info, .avatar-wrap, .search-form
		max-width: 100%
		overflow: hidden
		//transition: all 200ms linear
	.room-info
		position: relative
		max-width: 100%
		.connected-users
			position: absolute
			right: 0
			top: 12px
			color: gainsboro-dark
			width: 65px
			line-height: 19px;
			font-size: 18px
			.fa-user
				float: left
			.sml-nr
				margin-left: 5px
				overflow: hidden
		h1
			@extend $bigger-font-size
			margin: 0
			padding-top: 8px
			margin-right: 12px
			padding-right: 77px
			height: 1.5em
			max-width: 100%
			display: inline-block
			position: relative
			overflow: hidden
			color: white
			&.room-grp
				@extend $hoverable
				&:hover
					color: white
					.connected-users
						color: white
			.room-name
				text-overflow: ellipsis
				white-space: nowrap
				overflow: hidden
				// width: 100%
				max-width: 500px
				display: block
				height: 1.5em
				i
					color: gainsboro-light
	.user:not(.typing) .fa
		display: none
	.user-menu-wrap
		@extend $clearfix
		@extend $hoverable
		float: right
		margin: 0 0 0 20px
		display: table-cell
		vertical-align: middle
		&:hover
			.fa
				color: white
		.fa
			margin: 10px 0 0 5px
			color: gainsboro-dark
		.avatar-wrap
			display: inline
			margin-right: 6px
		.online
		.offline
			top: -6px
			width: 10px
			height: 10px
		.user-name
			color: white

a.feedback // Deprecated?
	float: right
	padding: 0 3px
	margin-left: 12px
	height: 36px
	line-height: 36px
	text-align: center
	font-weight: bold
	color: gainsboro-dark
	@extend $hoverable
	&:hover
		background: lighten(silver-dark, 25%)
		color: darken(gainsboro-dark, 20%)

