/*______ Top left Info about the product and Organisation ______*/
.org-info
	float: left
	width: client-navigation-width
	height: header-height
	background: organisation-background
	color: gainsboro-dark
	@extend $functional-list
	.powered-by,
	.logo
		padding-left: 20px
		padding-right: 20px
		display: block
		border-bottom: 1px solid darken(organisation-background, 5)
	.powered-by
		background: jet
		height: (header-height / 4)
		line-height: (header-height / 4)
		text-transform: uppercase
		font-size: 10px
		text-decoration: none
		color: gainsboro-dark
		&:hover
			color: gainsboro-light
	a.logo
		height: header-height
		line-height: header-height
		i
			float: right
			height: header-height
			line-height: header-height
			color: gainsboro-dark
			margin-left: 10px
		img
			width: 36px
			height: 36px
			margin-top: 11px
			margin-right: 7px
			border-radius: 50%
			box-shadow: 0 2px 0 1px solid darken(organisation-background, 8)
			background: white
		.name
			color: gainsboro-dark
			line-height: header-height
			font-weight: bold
		&:hover
			background: lighten(organisation-background, 1%)
			text-decoration: none
			i,
			.name
				color: gainsboro-light
				text-decoration: none

/*______ Left navigation ______*/
.navigation
	display: block
	@extend $normal-font-size
	color: gainsboro-dark
	.navigation
		padding: 23px 0 54px 0px
		background: jet

a.nav-title-wrap, .nav-list a //Sidebar Link Styling
	color: gainsboro-dark
	text-decoration: none!important
	&:hover
		color: gainsboro-light

.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		padding-left: 20px
		overflow: hidden
		&:hover
			text-decoration: none
	.nav-button
		float: right
		margin-right: 7px
		margin-top: -3px

.nav-list
	margin-bottom: 12px
	.item
		@extend $functional-list
		a
			display: block
			padding: 7px 12px 3px 20px
			text-decoration: none
			border-left: 0 solid grape-light
			transition: all 200ms linear
		&.selected
			a
				color: white
				font-weight: bold
				background: lighten(jet, 3)
				border-left-width: 3px
				padding-left: 17px
			.icon
				color: grape-light
		.name
			height: 1.25em
			line-height: 1em

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)


.client-body .feedback
	position: fixed
	bottom: 0
	left: 0
	width: client-navigation-width
	background: organisation-background
	height: footer-height
	line-height: footer-height
	display: block
	padding: 0 17px
	z-index: 999
	border-top: 1px solid darken(organisation-background, 5)
