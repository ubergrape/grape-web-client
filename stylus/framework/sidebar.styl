// ****
//
// Left navigation
//
// ****
.navigation
	@extend $normal-font-size
	height: 100vh
	overflow: auto
	position: absolute
	top: 0
	left: 0
	color: gainsboro-dark
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	overflow: hidden
	.navigation
		padding: 0px
		background: navigation-background
	.nav-wrap-out
		height: 100vh
		border-right: 1px solid silver-grey-dark
.nav-outer
	min-width: 180px
	width: client-navigation-width
	max-width: 38.2%
.nav-inner
	width: 100%
// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-info
	height: header-height
	background: organisation-background
	border-right: 1px solid darken(organisation-background, 2)
	-webkit-font-smoothing: antialiased // fixes font bug in os x app and firefox on windows, see #1612
	-moz-osx-font-smoothing: grayscale // fixes font bug in os x app and firefox on windows, see #1612
	.quick-search-trigger
		float: right
		height: header-height
		padding: 0 16px 0 8px
		display: flex
		align-items: center
		@extend $big-font-size
		color: white
		display: none
		&:hover
			opacity: 0.7
	.logo
		height: header-height
		display: flex
		align-items: center
		padding: 0 8px 0 16px
		overflow: hidden
		text-decoration: none
		@extend $functional-list
		.name
		i
			color: white
		.name
			max-width: 172px
		i
			margin-left: 8px
			@extend $small-font-size

	a:hover
		text-decoration: none
		i,
		.name
			opacity: 0.7
			text-decoration: none

// ****
//
// The room list of the organisation
//
// ****

.nav-tabs
	background: chat-background
	border-bottom: 1px solid silver-dark
	border-right: 1px solid silver-dark
	width: 100%
	@extend $clearfix
	> div
		float: left
		width: 44%
		a
			display: block
			width: 100%
			height: 42px
			text-align: center
			line-height: 45px
			color: gainsboro-dark
			text-decoration: none
			&:hover
				background: navigation-background
				color: darken(gainsboro-dark, 10)
		.fl-notification
			margin: 12px 5px 5px
	.nav-tab-search
		width: 12%
		a
			color: gainsboro-dark
			border-left: 1px dashed silver-dark
	.selected
		a
			border-bottom: 3px solid cherry
			color: cherry !important
			&:hover
				background: inherit
.room-list
	padding: 14px 0 0 0
	.rooms
		height: 100%


.nav-title-wrap,
a.nav-title-wrap
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	color: gainsboro-dark
	text-decoration: none
	.nav-title
		text-transform: uppercase
		font-size: 12px;
		padding-left: 15px
		overflow: hidden
	&:hover
		text-decoration: none
		color: grape-typo

a.nav-title-wrap
	display: inline-block
	float: left
	width: 100%

.nav-button
	position: absolute
	right: 0
	margin: 7px 10px 0 0
	border: 1px solid
	border-radius: 50%
	width: 17px
	height: 17px
	text-align: center
	line-height: 15px
	cursor: pointer
	&:hover
		color: grape-typo

// Sidebar Link Styling

.nav-list
	clear: both
	.item
		@extend $functional-list
		&:hover
			a
				background: silver-light
		&.deleted
			.name
				color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				text-transform: uppercase
				margin-left: 4px
		&.selected
			a
				background: silver-dark
				color: grape-typo
			.icon
				color: gainsboro-dark
			span.user-deleted
				color: gainsboro-dark
	.nav-list
		padding: 0 0 12px 0

// ****
//
// The Private Message list
//
// ****
.pm-list
	padding: 22px 0
	.pms
		height: 100%

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	background: navigation-background
	border: none
	border: 1px solid darken(navigation-background, 5)
	border-radius: 25px
	width: client-navigation-width
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = gainsboro-dark)
	&:focus
		outline: none
		color: grape-typo
