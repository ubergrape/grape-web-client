/*______ Top left Info about the product and Organisation ______*/
.organization-info
	float: left
	width: client-navigation-width
	height: header-height
	background: organisation-background
	color: sidebar-text-color
	.info-poweredby
	.info-organizationlogo
		padding: 6px 20px
	.info-poweredby
		background: poweredby-background
		height: (header-height / 3)
		text-transform: uppercase
		font-size: 10px
	.info-organizationlogo
		background: clientlogo-background
		height: (header-height / 3) * 2

/*______ Left navigation ______*/
.navigation
	color: sidebar-text-color
	background: jet
	font-size: sidebar-label-font-size
	padding: 34px 0 0px 0px

a.nav-title-wrap, .nav-list a //Sidebar Link Styling
	color: sidebar-text-color
	&:hover
		color: sidebar-button-hover-text-color

.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		padding-left: 20px
		overflow: hidden
	.nav-button
		float: right
		margin-right: 7px
		margin-top: -3px

.nav-list
	margin-bottom: 12px
	.item
		@extend $functional-list
		a
			display: block
			padding: 7px 12px 3px 8px
			margin-right: 0
			margin-left: 12px
			text-decoration: none
		&.selected
			a
				color: highlight-text-color
				font-weight: bold
				border-radius: 5px 0 0 5px
				background: darken(jet, 3);
		.name
			height: 1.25em
			line-height: 1em