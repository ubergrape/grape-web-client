// ****
//
// Left navigation
//
// ****
.navigation
	@extend $normal-font-size
	width: client-navigation-width
	height: 100%
	overflow: auto
	float: left
	display: block
	color: gainsboro-dark
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	.navigation
		padding: 0px
		background: jet
	
// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-info
	height: header-height
	background: organisation-background
	color: gainsboro-dark
	@extend $functional-list
	.powered-by,
	.logo
		padding-left: 20px
		padding-right: 20px
		display: block
		border-bottom: 1px solid darken(organisation-background, 5)
	.powered-by
		background: jet
		height: (header-height / 4)
		line-height: (header-height / 4)
		text-transform: uppercase
		font-size: 10px
		text-decoration: none
		color: gainsboro-dark
		&:hover
			color: gainsboro-light
	a.logo
		height: header-height
		line-height: header-height
		i
			float: right
			height: header-height
			line-height: header-height
			color: gainsboro-dark
			margin-left: 10px
		img
			width: 36px
			height: 36px
			margin-top: 11px
			margin-right: 7px
			border-radius: 50%
			box-shadow: 0 2px 0 1px solid darken(organisation-background, 8)
			background: white
		.name
			color: gainsboro-dark
			line-height: header-height
			font-weight: bold
		&:hover
			background: lighten(organisation-background, 1%)
			text-decoration: none
			i,
			.name
				color: gainsboro-light
				text-decoration: none
// ****
//
// The room list of the organisation
//
// ****

.room-list
	padding: 23px 0 12px 0

// ****
//
// The Private Message list
//
// ****
.pm-list
	padding: 12px 0
	position: absolute
	bottom: 36px
	left: 0
	right: 0
	background: darken(jet, 1)
	max-height: 50%
	min-height: 150px
	top: auto !important
	&::after
		content: "\b7\b7\b7"
		position: absolute
		top: 0
		left: 0
		right: 0
		height: 5px
		border-top: 1px solid darken(organisation-background, 5)
		text-align: center
		line-height: 5px
		color: lighten(jet, 10%)
		background: darken(jet, 1)
	&:hover::after
		color: gainsboro-dark
	.rsize-d
		top: 0
		z-index: 15

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	position: absolute
	bottom: -36px
	left: 0
	right: 0
	background: darken(jet, 1)
	border: none
	border-top: 1px solid darken(organisation-background, 5)
	width: 100%
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = lighten(organisation-background, 25))

	&:focus
		outline: none
		background: lighten(organisation-background, 2)

a.nav-title-wrap, .nav-list a //Sidebar Link Styling
	color: gainsboro-dark
	text-decoration: none!important
	&:hover
		color: gainsboro-light

.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		padding-left: 20px
		overflow: hidden
		&:hover
			text-decoration: none
	.nav-button
		float: right
		margin-right: 7px
		margin-top: -3px

.nav-list
	.item
		@extend $functional-list
		a
			display: block
			padding: 7px 12px 3px 20px
			text-decoration: none
			border-left: 0 solid grape-light
			transition: all 200ms linear
		&.selected
			a
				color: white
				font-weight: bold
				background: lighten(jet, 3)
				border-left-width: 3px
				padding-left: 17px
			.icon
				color: grape-light
		.name
			height: 1.25em
			line-height: 1em

