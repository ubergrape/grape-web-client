// ****
//
// Left navigation
//
// ****
.navigation
	@extend $normal-font-size
	width: client-navigation-width
	height: 100%
	overflow: auto
	float: left
	display: block
	color: gainsboro-dark
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	.navigation
		padding: 0px
		background: navigation-background
	
// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-info
	height: header-height
	background: organisation-background
	color: white
	@extend $functional-list
	.logo
		padding-left: 20px
		display: inline-block
	a.logo
		height: header-height
		line-height: header-height
		i
			height: header-height
			line-height: header-height
			color: gainsboro-dark
			margin-left: 10px
		img
			width: 36px
			height: 36px
			margin-top: 11px
			margin-right: 7px
			border-radius: 50%
			background: white
		.name
			color: white
			line-height: header-height
		&:hover
			background: lighten(organisation-background, 1%)
			text-decoration: none
			i,
			.name
				color: white
				text-decoration: none
// ****
//
// The room list of the organisation
//
// ****

.room-list
	padding: 23px 0 12px 0
	height: 61%
	background: linear-gradient(to bottom, rgba(grape-dark, .5) 0%, navigation-background 1%)
	border-right: 1px solid silver-dark
	.rooms
		height: 100%

// ****
//
// The Private Message list
//
// ****
.pm-list
	padding: 12px 0 23px
	position: absolute
	bottom: 37px
	left: 0
	right: 0
	max-height: 50%
	min-height: 20%
	top: auto !important
	width: 260px
	height: 25%
	border-right: 1px solid silver-dark
	.pms
		height: 100%
	&::after
		cursor: move
		content: "\b7\b7\b7"
		position: absolute
		top: 0
		left: 0
		right: 0
		height: 8px
		border-top: 1px solid darken(navigation-background, 10%)
		text-align: center
		line-height: 6px
		color: gainsboro-light
		background: darken(navigation-background, 2%)
	&:hover::after
		color: gainsboro-dark
		background: darken(navigation-background, 3%)
	.rsize-d
		top: 0
		z-index: 15

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	position: absolute
	bottom: 0
	background: white
	border: none
	border-top: 1px solid darken(navigation-background, 5)
	border-right: 1px solid silver-dark
	width: client-navigation-width
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = gainsboro-dark)
	&:focus
		outline: none
		color: grape-typo		

.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		padding-left: 20px
		overflow: hidden
		&:hover
			text-decoration: none
			a
				background: none
	.nav-button
		float: right
		margin-right: 7px
		margin-top: -3px


// Sidebar Link Styling

a.nav-title-wrap
	text-decoration: none!important
	color: gainsboro-dark
	&:hover
		color: gainsboro-dark
.nav-list a 
	color: grape-typo
	text-decoration: none!important
	&:hover
		color: lighten(grape-typo, 20%)
		background: darken(navigation-background, 2%)
		
.nav-list
	.item
		@extend $functional-list
		a
			display: block
			padding: 7px 12px 3px 20px
			text-decoration: none
			border-left: 0 solid grape-light
		.icon
			color: gainsboro-dark
		&.selected
			a
				//color: white
				font-weight: bold
				background: gainsboro-light
				border-left-width: 3px
				padding-left: 17px
			.icon
				color: grape-light
		.name
			height: 1.25em
			line-height: 1em
			text-overflow: ellipsis 
			white-space: nowrap
			overflow: hidden
			display: block

