/*______ Top left Info about the product and Organisation ______*/
.org-info
	float: left
	width: client-navigation-width
	height: header-height
	background: organisation-background
	color: gainsboro-dark
	.powered-by
	.logo
		padding-left: 20px
		padding-right: 20px
		display: block
		border-bottom: 1px solid darken(organisation-background, 5)
	.powered-by
		background: jet
		height: (header-height / 4)
		line-height: (header-height / 4)
		text-transform: uppercase
		font-size: 10px
		text-decoration: none
		color: gainsboro-dark
		&:hover
			color: gainsboro-light
	a.logo
		height: (header-height / 4) * 3
		line-height: (header-height / 4) * 3
		i
			float: right
			height: (header-height / 4) * 3
			line-height: (header-height / 4) * 3
			color: gainsboro-dark
			&:hover
				color: gainsboro-light
		img
			margin-top: 6px

/*______ Left navigation ______*/
.navigation
	@extend $normal-font-size
	color: gainsboro-dark
	background: jet
	padding: 34px 0 0px 0px

a.nav-title-wrap, .nav-list a //Sidebar Link Styling
	color: gainsboro-dark
	text-decoration: none!important
	&:hover
		color: gainsboro-light

.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		font-weight: bold
		padding-left: 20px
		overflow: hidden
		&:hover
			text-decoration: none
	.nav-button
		float: right
		margin-right: 7px
		margin-top: -3px

.nav-list
	margin-bottom: 12px
	.item
		@extend $functional-list
		a
			display: block
			padding: 7px 12px 3px 20px
			text-decoration: none
			border-left: 0 solid grape-light
			transition: all 200ms linear
		&.selected
			a
				color: white
				font-weight: bold
				background: lighten(jet, 3)
				border-left-width: 3px
				padding-left: 17px
			.icon
				color: grape-light
		.name
			height: 1.25em
			line-height: 1em