// ****
//
// Left navigation
//
// ****
.navigation
	@extend $normal-font-size
	height: 100vh
	overflow: auto
	position: absolute
	top: 0
	left: 0
	color: gainsboro-dark
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	overflow: hidden
	.navigation
		padding: 0px
		background: sidebar-background
	.nav-wrap-out
		height: 100vh
		border-right: 1px solid darken(sidebar-background, 10%)
.nav-outer
	min-width: 200px
	width: client-navigation-width
	max-width: 38.2%
.nav-inner
	width: 100%

// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-area-bg
	height: 150px
	display: block
	text-align: center
	border-right: 1px solid darken(sidebar-background, 10%)
	border-bottom: 1px solid lighten(sidebar-background, 25%)
	background-image: url("../images/cg-header.jpg")
	background-position: center center
	background-repeat: no-repeat
	background-size: cover
	.bg-overlay
		position: absolute
		left: 0px
		top: 0px
		display: block
		width: 100%
		height: 150px
		z-index: 30
		background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
					linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.0))
.org-info
	width: 100%
	height: 150px
	display: table
	position: absolute
	top: 0px
	left: 0px
	.org-topbar
		width: 100%
		position: absolute
		left: 0px
		top: 0px
		z-index: 60
		padding: 10px
		.settings-icon
			text-align: center
			font-size: 20px
			color: rgba(255, 255, 255, 0.6)
			text-shadow: 0px 0px 5px rgba(0, 0, 0, 1)
			-webkit-transition: color 0.3s
			transition: color 0.3s
			cursor: pointer
			&:hover
				color: rgba(255, 255, 255, 1)
		.toggle-sidebar-icon
			position: absolute
			left: 9px
			top: 33px
			text-align: center
			font-size: 18px
			color: rgba(255, 255, 255, 0.6)
			text-shadow: 0px 0px 5px rgba(0, 0, 0, 1)
			transform: rotate(-90deg)
			-webkit-transition: color 0.3s
			transition: color 0.3s
			cursor: pointer
			&:hover
				color: rgba(255, 255, 255, 1)
	.org-logo-name
		width: 100%
		height: 100%
		display: table-cell
		position: relative
		vertical-align: middle
		text-align: center
		padding: 16px 16px 8px 16px
		overflow: hidden
		text-decoration: none
		z-index: 50
		img
			display: block
			position: relative
			margin-left: auto
			margin-right: auto
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)
			border-radius: 50%
		.org-name
			display: block
			position: relative
			color: white
			margin-top: 16px
			font-size: 1.25em
			text-shadow: 0px 1px 3px rgba(0, 0, 0, 1)
			cursor: default
		.org-tagline
			display: block
			position: relative
			color: white
			margin-top: 1px
			font-size: 0.8em
			text-shadow: 0px 1px 3px rgba(0, 0, 0, 1)
			-webkit-transition: opacity 0.3s
			transition: opacity 0.3s
			opacity: 0.6
			cursor: pointer
			&:hover
				opacity: 1.0
		i
			margin-left: 8px
			@extend $small-font-size

	a:hover
		text-decoration: none
		i,
		.name
			opacity: 0.7
			text-decoration: none

.manage-rooms-button
	position: relative;
	width: 90%;
	display: block;
	text-align: center;
	background: #6E4B6E;
	margin: 0 auto;
	font-size: 1.1em;
	color: #EDEDED;
	padding-top: 9px;
	padding-bottom: 9px;
	border-radius: 4px;
	left: -1px;
	margin-bottom: 20px;
	text-decoration: none
	&:hover
		background: lighten(#6E4B6E, 5%)
		color: white;
		text-decoration: none


// ****
//
// The room list of the organisation
//
// ****

.nav-tabs
	background: chat-background
	border-bottom: 1px solid silver-dark
	border-right: 1px solid silver-dark
	width: 100%
	@extend $clearfix
	> div
		float: left
		width: 44%
		a
			display: block
			width: 100%
			height: 42px
			text-align: center
			line-height: 45px
			color: gainsboro-dark
			text-decoration: none
			&:hover
				background: navigation-background
				color: darken(gainsboro-dark, 10)
	.nav-tab-search
		width: 12%
		a
			color: gainsboro-dark
			border-left: 1px dashed silver-dark
	.selected
		a
			border-bottom: 3px solid cherry
			color: cherry !important
			&:hover
				background: inherit
.room-list
	padding: 14px 0 0 0
	.rooms
		height: 100%


.nav-title-wrap,
a.nav-title-wrap
	@extend $clearfix
	display: block
	color: sidebar-group-title
	padding-bottom: 2px
	text-decoration: none
	.nav-title
		color: sidebar-group-title
		text-transform: uppercase
		font-size: 0.8em;
		padding-left: 14px
		overflow: hidden
	&:hover
		color: sidebar-group-title
		text-decoration: none

a.nav-title-wrap
	display: inline-block
	float: left
	width: 100%

.nav-button
	position: absolute
	right: 0
	margin: 7px 10px 0 0
	border: 1px solid
	border-radius: 50%
	width: 17px
	height: 17px
	text-align: center
	line-height: 15px
	cursor: pointer
	&:hover
		color: grape-typo

// Sidebar Link Styling

.invite-list
.nav-wrap-out
	.channel-item
		&.taken
			background-color: sidebar-selected
			.channel-name
				color: white
			&:hover
				background-color: sidebar-selected
				.channel-name
					color: white
		clear: both
		padding: 0px
		padding-right: 8px
		height: 48px !important
		a
			display: block
			width: 100%
			height: 100%
		.avatar-wrap
		.room-face
			float: left
			display: inline-block
			text-align: center
			width: 32px
			height: 32px
			margin-left: 12px
			margin-right: 8px
			margin-top: 8px
			line-height: 32px
			border-radius: 3px
			background: grape-dark
			position: relative
			font-size: 1.1em
			color: white
			color: rgba(white, 0.9)
		.avatar-wrap
			background: rgba(0, 0, 0, 0) !important
			img
				width: 32px !important
				height: 32px
			.offline, .online
				border: solid 1px sidebar-background
				width: 10px
				height: 10px
				bottom: -1px
				right: -1px
		.icon
			padding: 3px 0
		.room-icon
			position: absolute
			right: -6px
			bottom: -4px
			width: 14px
			height: 14px
			z-index: 12
			padding-left: 1px
			line-height: 14px
			text-align: center
			border-radius: 50%
			background: slate
			font-size: 8px
			color: white
		.channel-name
			white-space: nowrap
			overflow: hidden
			ellipsis()
			font-size: 1.1em
			left: 0px
			right: 0px
			position: absolute
			display: inline-block
			margin-left: 52px
			padding-left: 3px
			padding-right: 6px
			margin-top: 15px
			color: white
		&:hover
			background: sidebar-hover
			.offline, .online
				border-color: sidebar-hover
		&.deleted
			.name
				color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				text-transform: uppercase
				margin-left: 4px
		&.selected
			background: sidebar-selected !important
			color: white !important
			.offline, .online
				border-color: #a0284b
	.nav-list
		padding: 0 0 12px 0

.invite-list
	margin-bottom: 8px
	.channel-item
		&:hover
			background-color: #e5e5e5
		.channel-name
			color: grape-darkest

// ****
//
// The Private Message list
//
// ****
.pm-list
	padding: 22px 0
	margin-bottom: 40px
	.pms
		height: 100%

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	background: navigation-background
	border: none
	border: 1px solid darken(navigation-background, 5)
	border-radius: 25px
	width: client-navigation-width
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = gainsboro-dark)
	&:focus
		outline: none
		color: grape-typo