// ****
//
// Left navigation
//
// ****
.navigation
	@extend $normal-font-size
	height: 100vh
	overflow: auto
	position: absolute
	top: 0
	left: 0
	width: client-navigation-width
	color: gainsboro-dark
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	.navigation
		padding: 0px
		background: navigation-background

// ****
//
// Top left Info about the product and Organisation
//
// ****

.org-info
	height: header-height
	background: organisation-background
	@extend $functional-list
	a
		padding: 0 16px
		display: block
	.logo
		height: header-height
		display: flex
		align-items: center
		.avatar-wrap
			margin: 0
			float: none
			width: 36px
			height: 36px
			border-radius: 50%
		.name
			@extend $big-font-size
			margin-left: 5px
			max-width: 172px
			overflow: hidden
			color: white
			white-space: nowrap
			text-overflow: ellipsis
		.fa
			color: grape-light
			margin-left: 5px
		&:hover
			background: lighten(organisation-background, 1%)
			text-decoration: none
			i,
			.name
				color: white
				text-decoration: none
// ****
//
// The room list of the organisation
//
// ****

.nav-tabs
	background: chat-background
	border-bottom: 1px solid silver-dark
	border-right: 1px solid silver-dark
	width: 100%
	@extend $clearfix
	> div
		float: left
		width: 44%
		a
			display: block
			width: 100%
			height: 42px
			text-align: center
			line-height: 45px
			color: gainsboro-dark
			text-decoration: none
			&:hover
				background: navigation-background
				color: darken(gainsboro-dark, 10)
		.fl-notification
			margin: 12px 5px 5px 
	.nav-tab-search
		width: 12%
		a
			color: gainsboro-dark
			border-left: 1px dashed silver-dark
	.selected
		a
			border-bottom: 3px solid cherry
			color: cherry !important
			&:hover
				background: inherit

.room-list
	padding: 14px 0 12px 0
	height: 61%
	border-right: 1px solid silver-dark
	background: navigation-background
	.rooms
		height: 100%


.nav-title-wrap
	@extend $hoverable
	@extend $clearfix
	display: block
	padding-bottom: 6px
	padding-top: 6px
	.nav-title
		text-transform: uppercase
		@extend $small-font-size
		padding-left: 20px
		overflow: hidden
		&:hover
			text-decoration: none
			a
				background: navigation-background
	.nav-button
		float: right
		margin-right: 10px
		margin-top: -3px
		.fa
			color: gainsboro-light
	&:hover .fa
		color: gainsboro-dark


// Sidebar Link Styling

a.nav-title-wrap
	text-decoration: none!important
	color: gainsboro-dark
	&:hover
		color: gainsboro-dark
.nav-list a 
	color: grape-typo
	text-decoration: none!important
	&:hover
		div.item-inner-wrp
			color: lighten(grape-typo, 20%)
			background: darken(navigation-background, 2%)
		
.nav-list
	.item
		@extend $functional-list
		a
			display: block
			padding: 1px 10px
			text-decoration: none
			color: #666
			div.item-inner-wrp
				padding: 10px 10px 8px 
				border-radius: 4px
		.name
			height: 1.25em
			line-height: 1em
			text-overflow: ellipsis 
			white-space: nowrap
			overflow: hidden
			display: block
			@extend $big-font-size
		&.deleted
			.name
				color: gainsboro-dark
			.avatar-status
				background: gainsboro-dark
			span.user-deleted
				@extend $small-font-size
				color: gainsboro-light
				text-transform: uppercase
				margin-left: 4px
		&.selected
			a
				div
					background: cherry
					color: #f8f8f8
			.icon
				color: white
			span.user-deleted
				color: gainsboro-dark
	.nav-list
		padding: 0 0 12px 0

// ****
//
// The Private Message list
//
// ****
.pm-list
	padding: 12px 0 58px
	position: absolute
	bottom: 0
	left: 0
	right: 0
	max-height: 75%
	min-height: 20%
	top: auto !important
	width: client-navigation-width
	height: 25%
	border-right: 1px solid silver-grey-dark
	background: navigation-background
	.pms
		height: 100%
	&::after
		content: "\b7\b7\b7"
		position: absolute
		top: 0
		left: 0
		right: 0
		height: 8px
		border-top: 1px solid darken(navigation-background, 10%)
		text-align: center
		line-height: 6px
		color: gainsboro-light
		background: darken(navigation-background, 2%)
	&:hover::after
		color: gainsboro-dark
		background: darken(navigation-background, 3%)
	.rsize-d
		top: 0
		z-index: 15

span.no-messages
	@extend $small-font-size
	padding-left: 20px
	display: block
	color: darken(gainsboro-dark, 10%)

// ****
//
// The search bar to filter users from the Private Message List
//
// ****
.filter-pms
	position: absolute
	bottom: 0
	background: navigation-background
	border: none
	border-top: 1px solid darken(navigation-background, 5)
	border-right: 1px solid silver-grey-dark
	width: client-navigation-width
	padding: 8px 12px 8px 20px
	z-index: 14
	placeholder(color = gainsboro-dark)
	&:focus
		outline: none
		color: grape-typo