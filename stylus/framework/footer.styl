/*______ Footer with Textarea ______*/
.footer
	border-top: 3px solid client-border-color
	margin-left: client-navigation-width
	background: linear-gradient(top, silver-dark 5%, white);
	padding: (vertical-space / 2) (horizontal-space / 2)
	.input-wrapper
		padding-left: 20px
		.input
			position: relative;
			width: 100%
			border: 1px solid gainsboro-light
			border-radius: main-border-radius
		&:after 
			content: ''
			position: absolute
			border-style: solid
			border-width: 15px 15px 15px 0
			border-color: transparent #FFFFFF
			display: block
			width: 0
			z-index: 1
			left: 15px
			top: 20px