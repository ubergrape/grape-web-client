/*______ Footer with Textarea ______*/
.footer
	left: 0
	bottom: 0
	position: fixed
	right: 0
	margin-left: client-navigation-width
	background: chat-background
	padding: 2px 0 15px 0
	background: linear-gradient(top, chat-background, silver-dark)
	.input-wrapper
		padding-left: 20px
		position: relative
		.image
			@extend $clearfix
			width: 36px
			float: left
			margin-right: (horizontal-space / 2)
			border-radius: 50%
			position: relative
			&::after
				content: ""
				position: absolute
				right: 0
				top: 14px
				border-right: 6px solid white
				border-top: 6px solid transparent
				border-bottom: 6px solid transparent
	.messageInput-wrapper
		margin-right: 30px
	.messageInput-wrapper // Looks like the actual textarea so that the actual textarea has the scrollbar on the right position
		@extend $clearfix
		@extend $textinput
		overflow: hidden
		position: relative
		//min-height: 38px
		padding: 0 36px 0 0
		background: #fff
		.messageInput
			@extend $normal-font-size
			border-radius: main-border-radius 0 0 main-border-radius
			height: 33px
			outline: none
			width: 100%
			padding: 8px 10px
			border: none
			margin: 0
			display: block
			resize: none;
			&:disabled
				background: silver-dark
				+.uploader .upload
					background: silver-dark
					.fa
						color: gainsboro-light
	// uploader styling
	.uploader
		position: absolute
		right: 0
		top: 0
		bottom: 0
		&::after
			content: ""
			position: absolute
			left: 0
			top: 6px
			bottom: 6px
			width: 1px
			border-left: 1px solid gainsboro-light
		.upload
			@extend $hoverable
			padding: 3px 0
			height: 100%
			min-height: 36px
			width: 36px
			&:hover
				background: silver-light
			.fa
				position: absolute // Keeps the plus in the middle if textarea grows
				right: 0
				top: 50%
				margin-top: -15px
				width: 36px
				height: 30px
				text-align: center
				line-height: 30px
				color: gainsboro-dark
		input
			display: none
	.upload-progress
		display: none
		position: absolute
		text-align: center
		top: 0
		left: 0
		bottom: 0
		right: 0
		line-height: 36px
		background: white
		border-radius: 5px
		overflow: hidden
		img.preview
			max-width: upload-size
			max-height: upload-size
			display: inline-block
			vertical-align: middle
		.progress
			position: absolute
			top: 0
			left: 0
			bottom: 0
			right: 0
			background: rgba(255, 255, 255, 0.6)
		.progress canvas
			display: inline-block
			vertical-align: middle
	.uploader.open .upload-progress
		display: block

.input-wrapper.editing
	.messageInput, .messageInput-wrapper
		background: lighten(gold, 80%)
	.messageInput-wrapper
		border-color: #B49A0F
	.uploader
		display: none

.input-wrapper .edit-message
	display:none

.input-wrapper.editing .edit-message
	display: block

