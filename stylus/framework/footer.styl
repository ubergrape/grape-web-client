/*______ Footer with Textarea ______*/
.footer
	border-top: 1px solid client-border-color
	margin-left: client-navigation-width
	background: linear-gradient(top, silver-dark 5%, white)
	padding: (vertical-space / 2) (horizontal-space / 2)
	.input-wrapper
		padding-left: 20px
		.image
			width: 48px
			float: left
			margin-right: (horizontal-space / 2)
			border-radius: 50%
		.input
			float: left
			width: 80%
			height: 40px
			border: 1px solid gainsboro-light
			border-radius: main-border-radius
			outline: none
			font-size: 15px
			&::after
				content: ""
				position: absolute
				right: 0
				top: 14px
				border-right: 6px solid chatline-content-background
				border-top: 6px solid transparent
				border-bottom: 6px solid transparent
.autocomplete-anchor
	position: relative
.autocomplete
	&.Textcomplete-hidden
		display: none
	bottom: 0px
	width: 100%
	background: white
	padding: 2px 5px
	border-radius: 5px
	box-shadow: 0px 4px 10px -1px rgba(black, 0.5)
.Textcomplete-highlighted
	background: #ddd


// uploader styling
.uploader
	input
		display: none

	position: absolute
	right: 0px

upload-size = 200px

.upload-progress
	display: none
	position: absolute
	text-align: center
	right: 0px
	top: - upload-size
	width: upload-size
	height: upload-size
	line-height: upload-size
	background: white
	border-radius: 5px
	overflow: hidden

	img.preview
		max-width: upload-size
		max-height: upload-size
		display: inline-block
		vertical-align: middle

	.progress
		position: absolute
		top: 0px
		left: 0px
		width: 100%
		height: 100%
		background: rgba(255, 255, 255, 0.6)
	.progress canvas
		display: inline-block
		vertical-align: middle
		

.uploader.open .upload-progress
	display: block

