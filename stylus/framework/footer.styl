/*______ Footer with Textarea ______*/
.footer
	left: 0
	bottom: 0
	position: fixed
	width: 100%
	height: footer-height
	margin-left: client-navigation-width
	background: chat-background
	padding: 4px 0 0 0
	background: linear-gradient(top, chat-background, silver-dark)
	.input-wrapper
		padding-left: 20px
		.image
			@extend $clearfix
			width: 36px
			float: left
			margin-right: (horizontal-space / 2)
			border-radius: 50%
			&::after
				content: ""
				position: absolute
				right: 0
				top: 14px
				border-right: 6px solid white
				border-top: 6px solid transparent
				border-bottom: 6px solid transparent
		.messageInput-wrapper
			@extend $clearfix
			float: left
			box-sizing: border-box
			overflow: hidden
			&::after
					content: ""
					position: absolute
					right: 0
					top: 14px
					border-right: 6px solid white
					border-top: 6px solid transparent
					border-bottom: 6px solid transparent
			.messageInput
				height: 36px
				border: 1px solid gainsboro-light
				border-radius: main-border-radius
				outline: none
				font-size: 15px
				padding: 8px 10px 8px 14px
.autocomplete-anchor
	position: relative
.autocomplete
	&.Textcomplete-hidden
		display: none
	bottom: 0px
	width: 100%
	background: white
	padding: 2px 5px
	border-radius: 5px
	box-shadow: 0px 4px 10px -1px rgba(black, 0.5)
.Textcomplete-highlighted
	background: #ddd