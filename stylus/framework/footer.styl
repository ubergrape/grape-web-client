/*______ Footer with Textarea ______*/
.footer
	border-top: 3px solid client-border-color
	margin-left: client-navigation-width
	background: linear-gradient(top, silver-dark 5%, white)
	padding: (vertical-space / 2) (horizontal-space / 2)
	.input-wrapper
		padding-left: 20px
		.input
			position: relative;
			width: 100%
			border: 1px solid gainsboro-light
			border-radius: main-border-radius
			&::before
				content: ""
				display: block
				position: absolute
				top: 10px
				left: - arrow-size
				border-right: arrow-size solid #aaa
				border-top: arrow-size solid rgba(#aaa, 0)
				border-bottom: arrow-size solid rgba(#aaa, 0)
			&::after
				content: ""
				display: block
				position: absolute
				top: 10px + 2
				left: - arrow-size + 2
				border-right: arrow-size - 2 solid white
				border-top: arrow-size - 2 solid transparent
				border-bottom: arrow-size - 2 solid transparent

.autocomplete-anchor
	position: relative

.autocomplete
	&.Textcomplete-hidden
		display: none
	bottom: 0px
	width: 100%
	background: white
	padding: 2px 5px
	border-radius: 5px
	box-shadow: 0px 4px 10px -1px rgba(black, 0.5)

.Textcomplete-highlighted
	background: #ddd
