body.compact .client
	//SIDEBAR
	.org-area-bg,
	.bg-overlay,
	.org-info
		height: 43px !important
	.org-logo-name img
		left: -30% !important
		top: -8px !important
		width: 24px !important
		height: 24px !important
	.org-name
		overflow: hidden !important
		-webkit-box-orient: vertical !important
		display: -webkit-box !important
		-webkit-line-clamp: 1 !important
		top: -34px !important
		margin-left: 32% !important
		margin-right: 2% !important
		font-size: 1.15em !important
		text-align: left !important
		margin-top: 4px !important
	.org-topbar
		.mdi-keyboard-caps
			display: none
	.pm-list
		padding: 0
	.manage-rooms-button
		padding: 4px 5px
	.channel-item
		.room-face,
		.avatar-wrap
			display:none
	.channel-name
		margin-top: 9px
		margin-bottom: 3px
		padding-left: 14px
	

	.room-header
		height: 42px
	.room-header-button-active
		line-height: 42px
	.right-sidebar
		margin-top: 42px
		height: calc(100% - 42px - 64px)



	.message-group
		margin: 0 !important
		padding: 5px 19px 5px 160px !important
		min-height: 64px
		border: 1px solid silver-light
		&::after
			content: ""
			position: absolute
			top: 0
			left: 0
			bottom: 0
			width: 145px
			background: #fff
		.avatar
			display: none
		.message-content
			margin-left: 0
		.message
			border: none
			box-shadow: none
			background: none
			margin: 0 56px 0 0 !important
			padding-right: 20px !important
			&.requested 
				background-color: rgba(201, 255, 174, 0.53) !important
			&.activity
				top: 0 !important
				background: #fff !important
				.text
					margin-top: 0
		.messageinfo
			width: 140px
			position: absolute
			left: -136px
			span
				margin-left: 0
		.message-author
			display: block
			font-weight: bold
		.time
			display: inline
		.different-timezone
			position: absolute
			top: 0
			background: #fff
			z-index: 55
			border-radius: 4px
			padding: 0 3px
			
		.vertical-line
			width: 3px
			left: 155px
			top: 1px
			bottom: 9px
			
